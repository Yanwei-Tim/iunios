<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText android:id="@+id/xl_share_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="17dp"
        android:hint="@string/xlweibosdk_not_support_api"
        />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
        
        <ImageView android:id="@+id/xl_share_img"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_marginLeft="17dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/album_art_default"
            />
        
        <RelativeLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/xl_share_img"
	        android:layout_marginLeft="9dp"
	        android:layout_centerVertical="true"
	        android:orientation="vertical"
            >
            
            <TextView android:id="@+id/xl_share_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:textSize="17sp"
		        android:text="@string/playlist_songs"
	            />
        
	        <TextView android:id="@+id/xl_share_artist"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/xl_share_title"
		        android:layout_alignLeft="@+id/xl_share_title"
		        android:layout_marginTop="1dp"
		        android:textColor="#b1b1b1"
		        android:textSize="11sp"
		        android:text="@string/playlist_artist"
	            />
        </RelativeLayout>
        
    </RelativeLayout>
</LinearLayout>
