<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@com.aurora:dimen/aurora_list_doubleline_height"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="10"
        style="@com.aurora:style/AuroraListMainTextStyle"
        android:layout_marginTop="@com.aurora:dimen/aurora_list_content_layout_paddingtop"/>
        

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title"
        android:layout_marginTop="@com.aurora:dimen/aurora_list_gap_height_maintext_and_subtext"
        style="@com.aurora:style/AuroraListSubTextStyle"
        android:layout_marginBottom="@com.aurora:dimen/aurora_list_content_layout_paddingbottom"
        />
    
    
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@com.aurora:dimen/aurora_list_doubleline_height"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" >
        <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#8c8c8c"/>
        <ImageView   
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/aurora_call_log_detail_button" 
        android:focusable="false"
        />
    </LinearLayout>
    
</RelativeLayout>
