<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="71dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13.6dp"
        android:textSize="18sp"
        android:textColor="#444444"
        />

    <TextView
        android:id="@+id/sms_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/sms_title"
        android:layout_marginTop="6dip"
        android:textSize="15sp"
        android:textColor="#9c9c9c"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="17dip"
         />

    <TextView
        android:id="@+id/sms_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/sms_title"
        android:layout_marginRight="17dp"
        android:textSize="12sp"
        android:textColor="#8c8c8c"
        />
    <TextView
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/sms_content"
        android:layout_marginTop="13.6dip"
        />

    <ImageView
        android:id="@+id/mms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sms_title"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/sms_title"
        android:src="@drawable/mms_flag" 
        android:visibility="gone"/>
     
</RelativeLayout>

