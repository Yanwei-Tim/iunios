<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="17dp"
    android:paddingRight="17dp"
    android:paddingTop="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:background="@drawable/aurora_frame_list_background_light" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/note_auto_indent"
            android:textColor="@color/note_main_text_color"
            android:textSize="18sp" />
        
        <aurora.widget.AuroraSwitch
            android:id="@+id/auto_indent_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/backup_view"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/aurora_frame_list_top_background_light"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/note_arrow_right"
        android:textColor="@color/note_main_text_color"
        android:textSize="18sp"
        android:text="@string/note_backup" />

    <TextView
        android:id="@+id/restore_view"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/aurora_frame_list_bottom_background_light"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/note_arrow_right"
        android:textColor="@color/note_main_text_color"
        android:textSize="18sp"
        android:text="@string/note_restore" />

    <TextView
        android:id="@+id/about_view"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/aurora_frame_list_top_background_light"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/note_arrow_right"
        android:textColor="@color/note_main_text_color"
        android:textSize="18sp"
        android:text="@string/note_about"
        android:visibility="gone" />

    <TextView
        android:id="@+id/share_view"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/aurora_frame_list_background_light"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/note_arrow_right"
        android:textColor="@color/note_main_text_color"
        android:textSize="18sp"
        android:text="@string/note_share" />

    <TextView
        android:id="@+id/express_view"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/aurora_frame_list_background_light"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/note_arrow_right"
        android:textColor="@color/note_main_text_color"
        android:textSize="18sp"
        android:text="@string/note_express" />
</LinearLayout>