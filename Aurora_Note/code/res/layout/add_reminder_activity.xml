<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/selected_date_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/selected_date_time_margin_top"
        android:textSize="@dimen/textsize_16"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <com.aurora.note.widget.DateTimePickerView
        android:id="@+id/date_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_date_time_tv"
        android:layout_marginTop="@dimen/date_time_picker_margin_top"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/delete_reminder_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/delete_reminder"
        android:textSize="@dimen/textsize_20"
        android:layout_marginBottom="@dimen/delete_reminder_btn_margin_bottom"
        android:layout_marginLeft="@dimen/delete_reminder_btn_margin_left"
        android:layout_marginRight="@dimen/delete_reminder_btn_margin_right"
        android:visibility="gone" />

</RelativeLayout>