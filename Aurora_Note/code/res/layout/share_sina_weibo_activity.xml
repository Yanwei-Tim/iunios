<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <aurora.widget.AuroraEditText
            android:id="@+id/content_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/share_sina_weibo_hint"
            android:lineSpacingExtra="@dimen/share_content_line_spacing_extra"
            android:maxLength="200"
            android:minLines="3"
            android:gravity="top"
            android:paddingTop="@dimen/share_content_padding_top"
            android:paddingBottom="@dimen/share_content_padding_bottom"
            android:paddingLeft="@dimen/share_content_padding_left"
            android:paddingRight="@dimen/share_content_padding_right"
            android:textColor="#444444"
            android:textColorHint="#cbcbcb"
            android:textCursorDrawable="@drawable/share_sina_content_cursor"
            android:textSize="@dimen/new_note_content_textsize" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/new_note_content_padding_left"
            android:background="#e9e9e9"
            android:padding="1px">

            <ImageView
                android:id="@+id/pic_indicator"
                android:layout_width="@dimen/share_pic_width"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

</ScrollView>