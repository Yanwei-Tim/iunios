<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="aurora_file_name_select">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="aurora_file_other_select">
        <item name="android:textColor">#7b7b7b</item>
    </style>

    <style name="aurora_file_name_normal">
        <item name="android:textColor">@color/aurora_operation_more_title_change_color</item>
    </style>

    <style name="aurora_file_other_normal">
        <item name="android:textColor">@color/aurora_file_item_change_color</item>
    </style>

    <style name="aurora_file_status_select">
        <item name="android:textColor">#7b7b7b</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="aurora_file_status_normal">
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:textColor">@color/aurora_file_item_change_color</item>
    </style>

    <style name="my_theme" parent="@com.aurora:style/Theme.aurora.Light">
        <!-- <item name="android:windowBackground">@android:color/transparent</item> -->
        <!-- <item name="android:colorBackgroundCacheHint">@null</item> -->
        <!-- <item name="android:windowIsTranslucent">true</item> -->
    </style>

</resources>