<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_add_bookmark_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/ll_add_bookmark_view"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:background="@com.aurora:drawable/shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@com.aurora:dimen/aurora_alert_dialog_title_margin_top" >

        <com.aurora.internal.widget.AuroraDialogTitle
            style="@com.aurora:style/DialogWindowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal|bottom"
            android:singleLine="true"
            android:text="@string/add_to_bookmarks"
            android:textColor="@com.aurora:color/black"
            android:textSize="@com.aurora:dimen/aurora_alert_dialog_title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_add_to_bookmarks_thumb"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/default_icon_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >

                <aurora.widget.AuroraEditText
                    android:id="@+id/et_add_to_bookmarks_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <aurora.widget.AuroraEditText
                    android:id="@+id/et_add_to_bookmarks_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#00000000"
                    android:singleLine="true"
                    android:textColor="#7b7b7b"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="13dp"
            android:background="@com.aurora:drawable/aurora_alert_dialog_btn_panel_divider_v" />

        <LinearLayout
            android:id="@+id/ll_add_to_bookmarks_save_foler"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/btn_bookmark_new_folder_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_to_bookmarks_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_add_to_bookmarks_save_foler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#7b7b7b"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_add_to_bookmarks_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/list_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@com.aurora:drawable/aurora_alert_dialog_btn_panel_divider_v" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_add_bookmark_view_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@com.aurora:drawable/aurora_alert_dialog_btn_selector_left"
                android:text="@string/cancel_text"
                android:textColor="@com.aurora:color/aurora_button_text_color"
                android:textSize="@com.aurora:dimen/aurora_alert_dialog_btn_text_size" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@com.aurora:drawable/aurora_alert_dialog_btn_panel_divider_v" />

            <Button
                android:id="@+id/btn_add_bookmark_view_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@com.aurora:drawable/aurora_alert_dialog_btn_selector_right"
                android:text="@string/autofill_profile_editor_save_profile"
                android:textColor="@com.aurora:color/aurora_button_text_color"
                android:textSize="@com.aurora:dimen/aurora_alert_dialog_btn_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

