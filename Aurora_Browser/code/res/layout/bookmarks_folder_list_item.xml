<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_bookmarks_folder_list_item"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/thumb_bookmark_folder_icon" />

    <TextView
        android:id="@+id/tv_bookmarks_folder_list_item_foldername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:paddingBottom="17dp"
        android:paddingTop="17dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_bookmarks_folder_list_item_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/ok_icon" />

</LinearLayout>