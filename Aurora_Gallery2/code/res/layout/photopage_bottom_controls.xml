<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/photopage_bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aurora_bottom_controls_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/translate_color"
        android:visibility="gone">
	<View
		android:id="@+id/photopage_bottom_control_bgView"
		android:background="@color/button_dark_transparent_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone" />
	<LinearLayout
	  	android:id="@+id/photopage_bottom_images"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:visibility="gone">
	        <aurora.widget.AuroraAnimationImageView
	                android:id="@+id/photopage_bottom_control_delete"
	                android:src="@drawable/aurora_bottom_icon_delete"
	                android:background="@color/translate_color"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1.0"
		            android:gravity="center"
		            android:scaleType="center"
	                android:visibility="gone"/>
	        
	        <aurora.widget.AuroraAnimationImageView
	                android:id="@+id/photopage_bottom_control_edit"
	                android:src="@drawable/aurora_bottom_icon_edit"
	                android:background="@color/translate_color"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1.0"
		            android:gravity="center"
		            android:scaleType="center"
	                android:visibility="gone"/>
	                
	        <aurora.widget.AuroraAnimationImageView
	                android:id="@+id/photopage_bottom_control_edit_gray"
	                android:src="@drawable/aurora_bottom_icon_edit_gray"
	                android:background="@color/translate_color"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1.0"
		            android:gravity="center"
		            android:scaleType="center"
	                android:visibility="gone"/>
	        
	        
	        <aurora.widget.AuroraAnimationImageView
	                android:id="@+id/photopage_bottom_control_share"
	                android:src="@drawable/aurora_bottom_icon_share"
	                android:background="@color/translate_color"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1.0"
		            android:gravity="center"
		            android:scaleType="center"
	                android:visibility="gone"/>
	        <aurora.widget.AuroraAnimationImageView
	                android:id="@+id/photopage_bottom_control_set"
	                android:src="@drawable/aurora_bottom_icon_set"
	                android:background="@color/translate_color"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1.0"
		            android:gravity="center"
		            android:scaleType="center"
	                android:visibility="gone"/>
	                
	        <aurora.widget.AuroraAnimationImageView
	                android:id="@+id/photopage_bottom_control_set_gray"
	                android:src="@drawable/aurora_bottom_icon_set_gray"
	                android:background="@color/translate_color"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1.0"
		            android:gravity="center"
		            android:scaleType="center"
	                android:visibility="gone"/>
			<aurora.widget.AuroraAnimationImageView
	                android:id="@+id/photopage_bottom_control_detail"
	                android:src="@drawable/aurora_bottom_icon_detail"
	                android:background="@color/translate_color"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1.0"
		            android:gravity="center"
		            android:scaleType="center"
	                android:visibility="gone"/>
     </LinearLayout>
</RelativeLayout>
