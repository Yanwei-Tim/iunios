<?xml version="1.0" encoding="utf-8"?>
<com.android.gallery3d.plugin.tuYa.ui.PaintColorSelectView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/tuya_id_paint_color_select_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5">

    <FrameLayout
        android:id="@id/tuya_id_paint_color_red"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_paint_color_red" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_color_selected"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/tuya_id_paint_color_yellow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_paint_color_yellow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_color_selected"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/tuya_id_paint_color_green"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_paint_color_green" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_color_selected"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/tuya_id_paint_color_blue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_paint_color_blue" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_color_selected"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/tuya_id_paint_color_while"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_paint_color_while" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tu_ya_drawable_color_selected"
            android:visibility="gone" />
    </FrameLayout>

</com.android.gallery3d.plugin.tuYa.ui.PaintColorSelectView>