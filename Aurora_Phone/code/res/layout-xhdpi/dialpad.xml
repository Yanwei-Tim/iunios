<!--
     The grid of buttons used in the onscreen DTMF dialpad;
     see dtmf_twelve_key_dialer_view.xml.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:phone="http://schemas.android.com/apk/res/com.android.phone"
    android:id="@+id/dialpad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_marginBottom="2.75dp"
    >

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/aurora_dtmf_button_margin_bottom"
        android:layout_marginTop="@dimen/aurora_dtmf_button_margin_bottom" >

        <TextView
            android:id="@+id/one"
            style="@style/DialpadButtonStyle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/aurora_dtmf_button_margin"
            android:text="@string/aurora_dtmf_1" />

        <TextView
            android:id="@+id/two"
            style="@style/DialpadButtonStyle"
            android:layout_centerInParent="true"
            android:text="@string/aurora_dtmf_2" />

        <TextView
            android:id="@+id/three"
            style="@style/DialpadButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/aurora_dtmf_button_margin"
            android:text="@string/aurora_dtmf_3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginBottom="@dimen/aurora_dtmf_button_margin_bottom"
        android:layout_marginTop="@dimen/aurora_dtmf_button_margin_bottom" >

        <TextView
            android:id="@+id/four"
            style="@style/DialpadButtonStyle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/aurora_dtmf_button_margin"
            android:text="@string/aurora_dtmf_4" />

        <TextView
            android:id="@+id/five"
            style="@style/DialpadButtonStyle"
            android:layout_centerInParent="true"
            android:text="@string/aurora_dtmf_5" />

        <TextView
            android:id="@+id/six"
            style="@style/DialpadButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/aurora_dtmf_button_margin"
            android:text="@string/aurora_dtmf_6" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginBottom="@dimen/aurora_dtmf_button_margin_bottom"
        android:layout_marginTop="@dimen/aurora_dtmf_button_margin_bottom" >

        <TextView
            android:id="@+id/seven"
            style="@style/DialpadButtonStyle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/aurora_dtmf_button_margin"
            android:text="@string/aurora_dtmf_7" />

        <TextView
            android:id="@+id/eight"
            style="@style/DialpadButtonStyle"
            android:layout_centerInParent="true"
            android:text="@string/aurora_dtmf_8" />

        <TextView
            android:id="@+id/nine"
            style="@style/DialpadButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/aurora_dtmf_button_margin"
            android:text="@string/aurora_dtmf_9" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:layout_marginBottom="@dimen/aurora_dtmf_button_margin_bottom"
        android:layout_marginTop="@dimen/aurora_dtmf_button_margin_bottom" >

        <TextView
            android:id="@+id/star"
            style="@style/DialpadButtonStyle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/aurora_dtmf_button_margin"
            android:text="@string/aurora_dtmf_star" />

        <TextView
            android:id="@+id/zero"
            style="@style/DialpadButtonStyle"
            android:layout_centerInParent="true"
            android:text="@string/aurora_dtmf_0" />

        <TextView
            android:id="@+id/pound"
            style="@style/DialpadButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/aurora_dtmf_button_margin"
            android:text="@string/aurora_dtmf_pound" />
    </RelativeLayout>



</RelativeLayout>