<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <dimen name="btn_digit_text_size">40sp</dimen>
    <dimen name="btn_operation_text_size">40sp</dimen>
    <dimen name="btn_function_text_size">30sp</dimen>
    <dimen name="btn_clear_text_size">30sp</dimen>
    <dimen name="display_text_size">57sp</dimen>

    <style name="button_style">
       <item name="android:textSize">27sp</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:layout_weight">1</item>
       <item name="android:background">@drawable/btn_function</item>
       <!-- <item name="android:textColor">@color/btn_text_color</item> -->
       <item name="android:textColor">@color/btn_text</item>
       <item name="android:layout_marginLeft">@dimen/view_item_margin_h</item>
       <item name="android:layout_marginRight">@dimen/view_item_margin_h</item>
       <item name="android:soundEffectsEnabled">false</item>
		<!-- Aurora liugj 2014-03-17 modified for aurora's new feature end -->
    </style>

    <style name="digit_button_style" parent="button_style">
       <item name="android:background">@drawable/btn_digit</item>
    </style>
	
    <style name="digit_button_0_style" parent="button_style">
       <item name="android:paddingRight">@dimen/zero_btn_right_padding</item>
       <item name="android:background">@drawable/btn_digit</item>
    </style>
    
    <style name="operator_button_style" parent="button_style">
       <item name="android:textColor">@color/magic_flame</item>
       <item name="android:textSize">32sp</item>
       <item name="android:paddingLeft">@dimen/drawable_left_padding</item>
    </style>
    
    <style name="iuni_button_style" parent="operator_button_style">
       <item name="android:background">@drawable/btn_iuni</item>
    </style>
    
    <style name="button_small_style" parent="button_style">
       <item name="android:textSize">26sp</item>
    </style>
	
    <style name="button_percent_style" parent="button_style">
       <item name="android:textSize">22sp</item>
    </style>
    
    <style name="display_style">
       <item name="android:textSize">@dimen/display_text_size</item>
       <item name="android:inputType">text|textNoSuggestions</item>
       <item name="android:gravity">right|bottom</item>
       <item name="android:textColor">@color/button_text</item>
       <item name="android:textCursorDrawable">@drawable/text_cursor_light</item>
		 <!-- Aurora liugj 2014-03-08 modified for aurora's new feature start -->
       <item name="android:cursorVisible">false</item>
       <item name="android:focusableInTouchMode">false</item>
		 <!-- Aurora liugj 2014-03-08 modified for aurora's new feature end -->
       <item name="android:maxLines">1</item>
       <item name="android:scrollbars">none</item>
       <item name="android:scrollHorizontally">true</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:paddingTop">0dp</item>
       <item name="android:paddingLeft">8dp</item>
       <item name="android:paddingRight">12dp</item>
       <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="btn_row_style">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">0dip</item>
       <item name="android:layout_weight">1</item>
       <item name="android:orientation">horizontal</item>
    </style>

    <style name="btn_function_cell_style">
       <item name="android:layout_width">0dip</item>
       <item name="android:layout_weight">1</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:background">@drawable/btn_function</item>
       <item name="android:textSize">@dimen/btn_function_text_size</item>
    </style>

    <style name="btn_operation_cell_style">
       <item name="android:layout_width">0dip</item>
       <item name="android:layout_weight">1</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/btn_function</item>
       <item name="android:textSize">@dimen/btn_operation_text_size</item>
    </style>

    <style name="btn_digit_cell_style">
       <item name="android:layout_width">0dip</item>
       <item name="android:layout_weight">1</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/btn_digit</item>
       <item name="android:textSize">@dimen/btn_digit_text_size</item>
    </style>

    <style name="btn_clear">
       <item name="android:background">?android:attr/selectableItemBackground</item>
       <item name="android:textSize">@dimen/btn_clear_text_size</item>
    </style>
</resources>