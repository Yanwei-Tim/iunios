<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@com.aurora:dimen/aurora_listview_oneline_hight"
    android:minHeight="@com.aurora:dimen/aurora_listview_oneline_hight"
    android:background="@com.aurora:drawable/aurora_list_selector_light"
    android:paddingLeft="16dp" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null" />

    <TextView
        android:id="@+id/text"
        style="@com.aurora:style/TextAppearance.Aurora.Material.Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon" />

    <View
        android:visibility="gone"
        android:id="@+id/divider"
        android:layout_width="match_parent"
         android:layout_alignStart="@id/text"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/listDivider" />

</RelativeLayout>
