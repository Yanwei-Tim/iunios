<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/ringtone_rela" >
    
    <TextView
        android:id="@+id/local_ringtone_text"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#80414142"
        android:gravity="center_vertical"
        android:minHeight="28dp"
        android:paddingLeft="16dp"
        android:text="@string/downloaded_ringtone"
        android:textColor="#414142"
        android:textSize="12sp" />

    <aurora.widget.AuroraListView
        android:id="@+id/local_ringtone_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_ringtone_text"/>
    
    <TextView
        android:id="@+id/no_downloadringtone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_downloaded_ringtone"
        android:textColor="#414142"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>