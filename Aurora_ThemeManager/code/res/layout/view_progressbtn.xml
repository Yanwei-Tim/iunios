    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_item_down_btn_height"
        android:layout_gravity="center"
        android:background="@drawable/btn_theme_list_download_btn_bg"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/item_download"
        android:textColor="@color/theme_list_item_download_btn_text_color"
        android:textSize="@dimen/theme_list_item_download_btn_textsize" />

    <com.aurora.thememanager.widget.ToCircleView
        android:id="@+id/tcv_toProgress"
        android:layout_width="@dimen/app_item_down_btn_width"
        android:layout_height="@dimen/app_item_down_btn_height"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/progress_btn"
        android:layout_width="@dimen/progressBtnWidth"
        android:layout_height="@dimen/progressBtnHeight"
        android:layout_gravity="center"
        android:background="@drawable/aurora_progress_downloading"
        android:visibility="gone" />

    <com.aurora.thememanager.widget.RoundProgressView
        android:id="@+id/round_progress_view"
        android:layout_width="@dimen/progressBtnWidth"
        android:layout_height="@dimen/progressBtnWidth"
        android:layout_gravity="center"
        android_custom:roundColor="@color/progress_btn_second_color"
        android_custom:roundProgressColor="@color/progressRoundColor"
        android_custom:roundWidth="@dimen/progressRoundWidth" />

    <ImageView
        android:id="@+id/iv_progress1"
        android:layout_width="@dimen/progressBtnWidth"
        android:layout_height="@dimen/progressBtnWidth"
        android:layout_gravity="center"
        android:src="@drawable/icon_install_ing1"
        android:visibility="gone"
        android:tint="?attr/progressBtnMainColor"
         />

    <ImageView
        android:id="@+id/iv_progress2"
        android:layout_width="@dimen/progressBtnWidth"
        android:layout_height="@dimen/progressBtnWidth"
        android:layout_gravity="center"
        android:src="@drawable/icon_install_ing2"
        android:visibility="gone"
        android:tint="?attr/progressBtnMainColor"
         />

    <com.aurora.thememanager.widget.AuroraGlassView
        android:id="@+id/agv1"
        android:layout_width="@dimen/progressBtnWidth"
        android:layout_height="@dimen/progressBtnWidth"
        android:layout_gravity="center"
        android:visibility="gone"
        android_custom:big_radius="@dimen/progressBtnBigRadius"
        android_custom:dark_color="@color/progressGrey_dark"
        android_custom:dot_radius="@dimen/progressBtnDotRadius"
        android_custom:light_color="@color/progressGrey_light" />

    <com.aurora.thememanager.widget.AuroraGlassView
        android:id="@+id/agv2"
        android:layout_width="@dimen/progressBtnWidth"
        android:layout_height="@dimen/progressBtnWidth"
        android:layout_gravity="center"
        android:visibility="gone"
        android_custom:big_radius="@dimen/progressBtnBigRadius"
        android_custom:dark_color="@color/progressGreen_dark"
        android_custom:dot_radius="@dimen/progressBtnDotRadius"
        android_custom:light_color="@color/progressGreen_light" />

    <com.aurora.thememanager.widget.ToCircleView
        android:id="@+id/tcv_toRect"
        android:layout_width="@dimen/app_item_down_btn_width"
        android:layout_height="@dimen/app_item_down_btn_height"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/fouceBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_item_down_btn_height"
        android:layout_gravity="center"
        android:background="@drawable/button_download_apply"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/item_apply"
        android:textColor="?attr/progressBtnMainColor"
        android:textSize="@dimen/theme_list_item_download_btn_textsize"
        android:visibility="gone" />



</FrameLayout>