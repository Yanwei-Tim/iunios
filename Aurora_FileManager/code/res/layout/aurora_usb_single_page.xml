<?xml version="1.0" encoding="utf-8"?>

<!-- storage fragment -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/usb_card_storage_single"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/usb_card_storage_show"
        style="@style/CategoryButtonIconStyle"
        android:layout_centerVertical="true"
        android:paddingLeft="28dp"
        android:src="@drawable/category_icon_internal_light_single" />

    <TextView
        android:id="@+id/usb_card_storage_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="11dp"
        android:layout_toRightOf="@+id/usb_card_storage_show"
        android:text="@string/aurora_file_manager_internal_storage_title"
        android:textColor="@color/aurora_page_show_internal_title_left_change_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/usb_card_storage_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="43dp"
        android:layout_toRightOf="@+id/usb_card_storage_txt"
        android:textColor="@color/aurora_page_show_internal_title_right_change_color"
        android:textSize="16sp" />

    <ImageView
        style="@style/CategoryButtonIconStyle"
        android:layout_centerVertical="true"
        android:paddingLeft="11dp"
        android:paddingRight="21dp"
        android:layout_toRightOf="@+id/usb_card_storage_size"
        android:src="@drawable/category_icon_goto_fileview_page" />

</RelativeLayout>