<com.android.systemui.statusbar.policy.AuroraClockView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/aurora_time_hour_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/aurora_time_0" />

    <ImageView
        android:id="@+id/aurora_time_hour_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:layout_marginStart="3dip"
        android:src="@drawable/aurora_time_0" />

    <ImageView
        android:id="@+id/aurora_time_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:layout_marginStart="3dip"
        android:src="@drawable/aurora_time_doc" />

    <ImageView
        android:id="@+id/aurora_time_min_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:layout_marginStart="3dip"
        android:src="@drawable/aurora_time_0" />

    <ImageView
        android:id="@+id/aurora_time_min_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:layout_marginStart="3dip"
        android:src="@drawable/aurora_time_0" />

</com.android.systemui.statusbar.policy.AuroraClockView>
