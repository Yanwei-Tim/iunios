<com.android.systemui.statusbar.MSimSignalClusterView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <!-- Aurora <zhanggp> <2013-10-30> modified for systemui begin -->

    <FrameLayout
        android:id="@+id/wifi_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- android:layout_marginRight="@dimen/wifi_combo_margin_right" -->
        <!-- Aurora <zhanggp> <2013-10-30> modified for systemui begin -->

        <ImageView
            android:id="@+id/wifi_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/wifi_inout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom" />
    </FrameLayout>
    <!-- Aurora <zhanggp> <2013-11-01> modified for systemui begin -->

    <View
        android:id="@+id/wifispacer"
        android:layout_width="6dp"
        android:layout_height="5dp"
        android:visibility="gone" />
    <!-- android:layout_width="5dp" -->
    <!-- Aurora <zhanggp> <2013-11-01> modified for systemui end -->

    <View
        android:id="@+id/spacer"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/sim_indicator_internet_or_alwaysask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dip"
        android:visibility="gone" />
    <!-- Aurora Steve.Tang 2014-09-23, add for cta, show voice network type. start -->
    <ImageView
        android:id="@+id/voice_network_type01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dip"
        android:visibility="gone" />
    <!-- Aurora Steve.Tang 2014-09-23, add for cta, show voice network type. end -->
    <LinearLayout
        android:id="@+id/signal_cluster_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/mobile_combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/mobile_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/mobile_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!-- M: Support roam data show both. -->

            <ImageView
                android:id="@+id/mobile_roaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <!-- Aurora <zhanggp> <2013-11-04> modified for systemui begin -->

            <ImageView
                android:id="@+id/mobile_inout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />

            <ImageView
                android:id="@+id/no_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- android:layout_gravity="right|bottom" -->
            <!-- Aurora <zhanggp> <2013-11-04> modified for systemui end -->
        </FrameLayout>
    </LinearLayout>
    <!--  -->

    <View
        android:id="@+id/spacer2"
        android:layout_width="6dp"
        android:layout_height="5dp"/>
    <!-- Aurora Steve.Tang 2014-09-23, add for cta, show voice network type. start -->
    <ImageView
        android:id="@+id/voice_network_type02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dip"
        android:visibility="gone" />
    <!-- Aurora Steve.Tang 2014-09-23, add for cta, show voice network type. end -->
    <LinearLayout
        android:id="@+id/signal_cluster_combo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/mobile_combo_sub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/mobile_signal_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/mobile_type_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/mobile_inout_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" />

                <ImageView
                    android:id="@+id/no_sim_slot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/spacer3"
        android:layout_width="6dp"
        android:layout_height="5dp" 
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/signal_cluster_combo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/mobile_combo_sub3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/mobile_signal_sub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/mobile_type_sub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/mobile_roaming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/mobile_inout_sub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" />

                <ImageView
                    android:id="@+id/no_sim_slot3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/airplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- Aurora <zhanggp> <2013-11-01> added for systemui begin -->

    <View
        android:layout_width="6dp"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <!-- Aurora <zhanggp> <2013-11-01> added for systemui end -->

</com.android.systemui.statusbar.MSimSignalClusterView>