<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

     
    <RelativeLayout 
        android:id="@+id/layout_usb"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/aurora_usb_view_height"
        android:layout_alignParentBottom="true">

        <aurora.widget.AuroraSwitch android:id="@+id/check_usb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <TextView 
                android:id="@+id/text_usb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3.3dip"
                android:layout_marginLeft="15dip"
                android:textColor="@color/font_color"
                android:textSize="18sp"
                android:text="@string/zzzzz_turn_on_usb_storage"/>
            <TextView      
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_usb"
                android:layout_marginLeft="15dip"
                android:textSize="15sp"
                android:paddingTop="1.7dip"
                 android:textColor="@color/font_color2"
                android:text="@string/zzzzz_usb_storage_content"/>      
        </RelativeLayout>
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/divider"
        android:layout_above="@id/layout_usb"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@drawable/aurora_usb_divider"/>
        
    <RelativeLayout 
        android:id="@+id/layout_debug"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/aurora_usb_view_height"
        android:layout_above="@id/divider">
	<!--Gionee xiaolin 20121216 modify for CR00746871 start -->
        <aurora.widget.AuroraSwitch android:id="@+id/check_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"/>
	<!--Gionee xiaolin 20121216 modify for CR00746871 end -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/check_debug"
            android:layout_centerVertical="true">
            <TextView android:id="@+id/text_debug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:paddingTop="3.3dip"
                android:textSize="18sp"
                android:textColor="@color/font_color"
                android:text="@string/zzzzz_open_debug_mode"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_debug"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_marginLeft="15dip"
                android:textSize="15sp"
                android:paddingTop="1.7dip"
                android:textColor="@color/font_color2"
                android:text="@string/zzzzz_debug_mode_message"/>
        </RelativeLayout> 
    </RelativeLayout> 

    <ImageView
        android:id="@+id/diver_debug"
        android:layout_above="@id/layout_debug"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:visibility="gone"
        android:background="@drawable/aurora_usb_divider"/>
        
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/aurora_usb_storage_bg"
        android:layout_above="@id/layout_debug">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView android:id="@+id/icon"
        	  android:layout_centerHorizontal="true"
						android:layout_marginTop="77dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aurora_usb_android" />
        <TextView android:id="@+id/banner"
        		android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_below="@id/icon"
						android:textColor="@color/font_color"
            android:layout_marginTop="24dip"
            android:text="@string/zzzzz_usb_storage_title" /> 
        </RelativeLayout>
    </RelativeLayout> 
</RelativeLayout>
