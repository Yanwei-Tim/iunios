<com.android.contacts.editor.TextFieldsEditorView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@com.aurora:dimen/aurora_list_singleline_height"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true" >

        <include
            layout="@layout/gn_edit_spinner"
            android:visibility="gone" />

        <TextView
            android:id="@+id/type_title" 
            android:layout_height="match_parent"
            android:layout_width="@dimen/aurora_editor_type_label_width"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            style="@style/editor_type_text_style"
            android:visibility="gone"
             />
 
        <View
            android:id="@+id/type_vertical_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/aurora_vertical_divider" />
        
        <include
            layout="@layout/edit_field_list_with_anchor_view" />

        <include
            android:id="@+id/expansion_view_container"
            layout="@layout/edit_expansion_view"
            android:visibility="gone" />

        <include
            android:id="@+id/delete_button_container"
            layout="@layout/edit_delete_button"
            android:visibility="gone" />

    </LinearLayout>

</com.android.contacts.editor.TextFieldsEditorView>
