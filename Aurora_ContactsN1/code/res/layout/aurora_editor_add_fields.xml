<!-- Layout of "add field" row in contact editor -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/aurora_add_button_margin_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/aurora_editor_item_minheight" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:background="@drawable/aurora_kind_view_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/add_image"
            android:src="@drawable/aurora_edit_add_field_image"
            android:paddingRight="@dimen/aurora_add_button_image_padding_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/add_fields_more"
            android:textSize="@dimen/aurora_add_button_text_size"
            android:textColor="@color/aurora_add_button_text_color" />
    </LinearLayout>
</FrameLayout>