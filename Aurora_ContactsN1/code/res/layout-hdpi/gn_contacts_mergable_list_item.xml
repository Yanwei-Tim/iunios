<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/aurora_single_line_list_view_item_hight"
    android:layout_marginLeft="@dimen/aurora_contact_list_item_header_padding_left"
    android:layout_marginRight="@dimen/aurora_contact_list_item_header_padding_left"
    android:gravity="center_vertical">

    <!-- style="@style/Widget.QuickContactBadge" -->
    <!-- style="@*android:style/Widget.QuickContactBadge.WindowMedium" -->
    <!-- <ImageView
        android:id="@+id/icon"        
        style="@*android:style/Widget.QuickContactBadge"
        /> -->
    <ImageView 
        android:id="@+id/icon"
        android:gravity="center_vertical"
        style="?android:attr/quickContactBadgeStyleWindowMedium"
        android:layout_marginLeft="5dip"
        android:clickable="false"
    />

    <com.android.contacts.widget.GnTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginLeft="5dip"/>

</LinearLayout>