<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/astro_picker_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/current_astro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp" />
    
    <ImageView
        android:id="@+id/selected_astro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:visibility="invisible" />
    
    <ScrollView
        android:id="@+id/astro_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_astro"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/current_astro"
        android:layout_alignRight="@id/current_astro"
        android:background="#00101010"
        android:scrollbars="none"
        android:overScrollMode="never" >
        
        <LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent" >
            
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="60dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_2"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_3"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_4"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_5"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_6"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_7"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_8"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_9"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_10"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_11"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
	        
	        <include
	            layout="@layout/gn_astro_list_item"
	            android:id="@+id/astro_list_item_12"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="18dp" />
        </LinearLayout>
        
    </ScrollView>
    
    <View
        android:id="@+id/gn_astro_list_left_margin"
        android:layout_toLeftOf="@id/astro_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00101010" />
</RelativeLayout>