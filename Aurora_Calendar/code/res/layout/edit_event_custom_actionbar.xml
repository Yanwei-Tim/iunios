<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/gn_all_in_one_title_bg"
    >

    <!-- id must match corresponding menu item id -->
    <LinearLayout
        android:id="@+id/action_cancel"
        style="@style/EditEventCustomActionButton">

        <ImageView
            android:src="@drawable/ic_menu_cancel_holo_light"
            style="@style/EditEventCustomActionButtonImage" />
        <TextView
            android:text="@string/gn_edit_event_title_cancle"
            style="@style/GNEditEventActionBar"
             />

    </LinearLayout>
 <LinearLayout
        
        style="@style/EditEventCustomActionButton">

        <ImageView
           
            style="@style/EditEventCustomActionButtonImage" />
        <TextView
            
            style="@style/GNEditEventCustomActionButtonText" />

    </LinearLayout>
    <!-- id must match corresponding menu item id -->
    <LinearLayout
        android:id="@+id/action_done"
        style="@style/EditEventCustomActionButton">

        <ImageView
            android:src="@drawable/gn_editevent_action_bar_shave_image_enable_false_true"
            style="@style/EditEventCustomActionButtonImage"
            android:id="@+id/edit_event_shave_image" />
        <TextView
            android:text="@string/gn_edit_event_title_save"
            style="@style/GNEditEventActionBar"
            android:id="@+id/edit_event_shave_text" />

    </LinearLayout>
<!-- Gionee <jiating>  <2013-04-11> modify for new view design end -->

</LinearLayout>
