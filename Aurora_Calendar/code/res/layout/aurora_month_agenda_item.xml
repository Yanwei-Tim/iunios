<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp">

    <TextView 
        android:id="@+id/month_agenda_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="11dp"
        android:maxWidth="270dp"
        android:drawableStart="@drawable/aurora_agenda_icon_normal"
        android:drawablePadding="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/agenda_item_title_text_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/month_agenda_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/month_agenda_title"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/aurora_email_icon"
        android:clickable="false"
        android:visibility="gone" />

    <TextView
        android:id="@+id/month_agenda_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47.3dp"
        android:layout_below="@id/month_agenda_title"
        android:layout_marginTop="1dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/agenda_item_summary_text_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/month_agenda_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/aurora_agenda_reminder_open" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/horizontal_divider" />
</RelativeLayout>