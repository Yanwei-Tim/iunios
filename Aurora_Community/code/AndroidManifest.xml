<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aurora.community"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <application
        android:name="com.aurora.community.CommunityApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/action_bar_transparent"
        android:theme="@style/AuroraTheme" >
        <activity
            android:name="com.aurora.community.activity.MainActivity"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aurora.community.activity.twitter.TwitterNoteActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" 
            >
        </activity>
        <activity
            android:name="com.aurora.community.activity.picBrowser.ImagePickerActvity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.aurora.community.activity.CaptureActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.aurora.community.activity.twitter.TwitterItemPreviewActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.aurora.community.activity.picBrowser.ImagePreviewActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.aurora.community.activity.MessageBoxActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.aurora.community.activity.PostDetailImagePreviewActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.aurora.community.activity.PostDetailActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|navigation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.aurora.community.activity.OtherUserCenterActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|navigation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- 新浪微博web页 -->
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- 注册页 -->
        <activity
            android:name="com.aurora.community.activity.account.RegisterActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <!-- 手机号注册页 -->
        <activity
            android:name="com.aurora.community.activity.account.RegisterByPhoneNumActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- 国际码页 -->
        <activity
            android:name="com.aurora.community.activity.account.CountryCodeActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <!-- 验证手机号页 -->
        <activity
            android:name="com.aurora.community.activity.account.PhoneNumVerificationActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- 邮箱注册页 -->
        <activity
            android:name="com.aurora.community.activity.account.RegisterByEmailActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- 验证邮箱页 -->
        <activity
            android:name="com.aurora.community.activity.account.EmailVerificationActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <!-- 创建账号信息页 -->
        <activity
            android:name="com.aurora.community.activity.account.RegisterAccountInfoActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <!-- 账号详情页 -->
        <activity
            android:name="com.aurora.community.activity.account.AccountInfoActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <!-- 修改昵称页 -->
        <activity
            android:name="com.aurora.community.activity.account.SetNickActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" />

        <!-- 修改密码页 -->
        <activity
            android:name="com.aurora.community.activity.account.ChangePwdActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" />

        <!-- 验证密码页 -->
        <activity
            android:name="com.aurora.community.activity.account.ValidatePwdActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" />

        <!-- 修改手机号页 -->
        <activity
            android:name="com.aurora.community.activity.account.ChangePhoneNumActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" />

        <!-- 修改邮箱页 -->
        <activity
            android:name="com.aurora.community.activity.account.ChangeEmailActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" />

        <!-- 绑定成功页 -->
        <activity
            android:name="com.aurora.community.activity.account.BindSuccessActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <!-- 同步账户页 -->
        <activity
            android:name="com.aurora.community.activity.account.SyncAccountActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <!-- 找回密码页 -->
        <activity
            android:name="com.aurora.community.activity.account.FindPwdActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <!-- 通过手机找回密码页 -->
        <activity
            android:name="com.aurora.community.activity.account.FindPwdByPhoneNumActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- 通过邮箱找回密码页 -->
        <activity
            android:name="com.aurora.community.activity.account.FindPwdByEmailActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateUnchanged|adjustResize" >
        </activity>

        <!-- 重设密码页 -->
        <activity
            android:name="com.aurora.community.activity.account.ResetPasswordActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- 用户协议页 -->
        <activity
            android:name="com.aurora.community.activity.account.UserAgreementActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <!-- 通过手机找回密码页 -->
        <activity
            android:name="com.aurora.community.activity.account.PhotoBackupActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- 登录页 -->
        <activity
            android:name="com.aurora.community.activity.account.LoginActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AuroraTheme_no_line"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        
            <!-- Caution! Do not change this app key. It is only for demo usage. -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="555052e9e0f55ad1c4002082" >
        </meta-data>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="@string/community_channel" >
        </meta-data>
    </application>

</manifest>