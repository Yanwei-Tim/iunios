<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AuroraTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:actionModeBackground">@drawable/aurora_titlebar_bg</item>
        <item name="android:actionModeSplitBackground">@drawable/aurora_menu_click_bg</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:actionModeCloseDrawable">@null</item>
        <item name="android:actionModeCloseButtonStyle">@style/MyActionModeCloseButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/globals_text_color</item>
       <item name="android:windowContentOverlay">@drawable/aurora_action_bar_divider</item>
    </style>
    
    <style name="AuroraTheme_no_line" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:actionModeBackground">@drawable/aurora_titlebar_bg</item>
        <item name="android:actionModeSplitBackground">@drawable/aurora_menu_click_bg</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:actionModeCloseDrawable">@null</item>
        <item name="android:actionModeCloseButtonStyle">@style/MyActionModeCloseButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/globals_text_color</item>
       <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="community_actionbar_style" parent="android:Widget.ActionBar">
        <item name="android:background">@drawable/aurora_titlebar_bg</item>
        <item name="android:titleTextStyle">@style/actionBar_title_text_style</item>
        <item name="android:indicatorRight">@dimen/action_bar_margin_title</item>
    </style>
    
    <style name="actionBar_title_text_style">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">@dimen/action_bar_text_size</item>
    </style>

    <style name="MyActionModeCloseButtonStyle">
        <item name="android:background">@null</item>
    </style>

        <style name="dialog_style" parent="android:Theme.Light.NoTitleBar">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="mainpage_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mainpage_tv_margin_left</item>
        <item name="android:layout_marginTop">@dimen/mainpage_tv_margin_top</item>
        <item name="android:textSize">@dimen/mainpage_tv_size</item>
        <item name="android:textColor">@drawable/mainpage_bottom_tv_selector</item>
        <item name="android:drawablePadding">-20dp</item>
        
    </style>

    <style name="main_category_rl_style">
        <item name="android:layout_width">@dimen/mainpage_category_ll_content_child_rl_width</item>
        <item name="android:layout_height">@dimen/mainpage_category_ll_content_child_rl_height</item>
    </style>

    <style name="main_category_top_title_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mainpage_category_top_title_tv_margin_left</item>
        <item name="android:layout_marginRight">@dimen/mainpage_category_top_title_tv_margin_right</item>
        <item name="android:layout_marginTop">@dimen/mainpage_category_top_title_tv_margin_top</item>
        <item name="android:textColor">@color/widget_textview_normal</item>
        <item name="android:textSize">@dimen/mainpage_category_top_title_tv_size</item>
    </style>

    <style name="main_category_top_comment_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/mainpage_category_top_comment_tv_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/mainpage_category_top_comment_tv_margin_bottom</item>
        <item name="android:textColor">@color/stickylist_adapter_item_footer_twitter_time_tv_color</item>
        <item name="android:textSize">@dimen/mainpage_category_top_comment_tv_size</item>
        <item name="android:text">@string/total_comment</item>
    </style>

    <style name="main_category_top_iv_style">
        <item name="android:layout_height">@dimen/mainpage_category_top_iv_height</item>
        <item name="android:layout_marginTop">@dimen/mainpage_category_top_iv_margin_top</item>
        <item name="android:scaleType">centerCrop</item>
                   
    </style>
    
    <style name="main_category_top_fr_click_style" >
        <item name="android:layout_width">@dimen/mainpage_category_content_fr_click_width</item>
        <item name="android:layout_height">@dimen/mainpage_category_content_fr_click_height</item>
        </style>
        
<style name="upload_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    
    <style name="upload_progressDialog" parent="@style/upload_Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="bottom_menu_style">
        <item name="@android:windowEnterAnimation">@anim/bottom_menu_show</item>
        <item name="@android:windowExitAnimation">@anim/bottom_menu_dissmiss</item>
    </style>
    
    <!-- 账户相关 -->
    
    <style name="Account"></style>
    
    <style name="Account.Line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/account_info_line</item>
    </style>
    
    <style name="Account.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <style name="Account.TextView.Error">
        <item name="android:textSize">@dimen/textsize_10</item>
        <item name="android:textColor">@color/textview_error_color</item>
        <item name="android:layout_marginTop">@dimen/padding_6</item>
    </style>
    
    <style name="Account.TextView.Login">
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:paddingRight">@dimen/padding_15</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/login_account_height</item>
        <!--
        <item name="android:background">@null</item>
        -->
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Account.TextView.LoginRegister">
        <item name="android:textColor">#c6c6c6</item>
    </style>
    
    <style name="Account.TextView.Header">
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/account_info_textview_header_height</item>
        <!--
        <item name="android:background">@null</item>
        -->
        <item name="android:textColor">#6e6f70</item>
    </style>
    
    <style name="Account.TextView.AccountInfoItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <!--
        <item name="android:background">@null</item>
        -->
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Account.TextView.AccountInfoItemContent">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <!--
        <item name="android:background">@null</item>
        -->
        <item name="android:textColor">#5d5d5d</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    
    <style name="Account.TextView.RegisterNormalLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_10</item>
        <item name="android:paddingEnd">@dimen/padding_10</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">@dimen/textsize_14</item>
    </style>
    
    <style name="Account.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_focus_selector</item>
        <item name="android:textColor">@color/button_text_color_normal</item>
    </style>
    
    <style name="Account.Button.Logout">
        <item name="android:background">@drawable/button_logout_selector</item>
        <item name="android:textColor">@color/button_logout_text_color_normal</item>
    </style>
    
    <style name="Account.VerifyCodeView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_account_height</item>
        <item name="android:layout_marginStart">@dimen/padding_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">@dimen/login_vc_code_height</item>
        <item name="android:minWidth">@dimen/login_vc_code_width</item>
    </style>
    
    <style name="Account.LinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="Account.LinearLayout.AccountInfoContainer">
        <item name="android:layout_height">@dimen/account_info_item_height</item>
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:paddingRight">@dimen/padding_15</item>
        <item name="android:background">@drawable/account_info_item_selector</item>
    </style>
    
    <style name="Detail_Arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/padding_12</item>
        <item name="android:src">@drawable/list_arrow_right</item>
    </style>
    
    <style name="Detail_Arrow.Invisible">
        <item name="android:visibility">invisible</item>
    </style>
    
    <style name="Account_Layout_Item">
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:paddingRight">@dimen/padding_15</item>
        <item name="android:minHeight">@dimen/register_layout_item_min_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="Account_Layout_Item_TextView">
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Account_TextView_Tips">
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>
    
    <style name="Account_ClearableEditText">
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
    </style>
    
</resources>