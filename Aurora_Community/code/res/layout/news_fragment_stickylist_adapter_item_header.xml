<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal" >

    <com.aurora.community.view.CircleImageView
        android:id="@+id/iv_user_head"
        android:layout_width="@dimen/stickylist_adapter_item_header_iv_head_width"
        android:layout_height="@dimen/stickylist_adapter_item_header_iv_head_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/stickylist_adapter_item_header_iv_head_margin_left"
       />

    <TextView
        android:id="@+id/tv_user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/stickylist_adapter_item_header_tv_nick_margin_left"
        android:textColor="@color/gloab_title_color"
        android:textSize="@dimen/stickylist_adapter_item_header_tv_nick_size" />

</LinearLayout>