<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:fitsSystemWindows="true"
    android:id="@+id/activity_layout"
    >
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="@dimen/aurora_action_bar_height"
                 android:id="@+id/fr_action_bar_container"
                 />
    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/aurora_action_bar_divider"
               android:id="@+id/action_bar_divider"/>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/fr_content"
                 android:background="@color/common_main_bg"/>
</LinearLayout>
