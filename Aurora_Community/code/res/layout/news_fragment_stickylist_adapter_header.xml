<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stickylist_header_bar_size"
    android:background="@color/stickylist_header_background_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/header_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/stickylist_header_margin_left"
        android:textColor="@color/postdetail_light_color"
        android:textSize="@dimen/stickylist_header_tv_date_size" />

    <TextView
        android:id="@+id/header_tv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="@dimen/stickylist_header_tv_month_margin_top"
        android:textColor="@color/postdetail_light_color"
        android:textSize="@dimen/stickylist_header_tv_month_size" />

</LinearLayout>