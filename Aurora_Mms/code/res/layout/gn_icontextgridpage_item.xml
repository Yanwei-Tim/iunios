<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aurora_gridview_item_select"
    >
    <!-- Aurora xuyong 2013-10-12 modified for aurora's new feature start -->
    <LinearLayout 
        android:layout_width="90dip"
        android:layout_height="112dip"
        android:orientation="horizontal"
        >
        <TextView
                android:id="@+id/aurora_left_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@drawable/aurora_divider_por"
                />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
               <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@drawable/aurora_divider_lan"
                    />
               <ImageView 
                    android:id="@+id/icon"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28.4dip"
                    android:layout_marginBottom="6.7dip"/>
               <TextView 
                    android:id="@+id/label"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="#565656"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
         </LinearLayout>
         <TextView 
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@drawable/aurora_divider_por"
                />
     </LinearLayout>
<!-- Aurora xuyong 2013-10-12 modified for aurora's new feature end -->
     <!-- Aurora xuyong 2013-10-12 modified for aurora's new feature end -->
</LinearLayout>
