<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dip"
    android:paddingBottom="10dip"
    android:orientation="vertical"
    >
    
    <!-- title -->
    <RelativeLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
        android:gravity="center_vertical"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        >
        <ImageView
            android:id="@+id/qcb"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:visibility="gone"
            />
        <ImageButton
            android:id="@+id/call"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_alignTop="@+id/qcb"
            android:layout_centerVertical="true"
            android:visibility="gone" />
        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/actionBarItemBackground"
            android:layout_marginRight="16dip"
            />
        <TextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/deleteBtn"
            android:layout_marginLeft="16dip"
            />
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/name"
            android:layout_marginLeft="16dip"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="3dip"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_toRightOf="@id/number"
            android:layout_toLeftOf="@id/deleteBtn"
            android:layout_below="@id/name"
            />
    </RelativeLayout>
    
    <!-- middle -->
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        >
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:scrollbarSize="1dip"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dip"
                android:id="@+id/msgContent"
                >
                <TextView
                    android:id="@+id/smsContent"
                    android:minLines="5"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone"
                    />
                <ImageView
                  android:id="@+id/mmsContent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:visibility="gone"
                  android:layout_gravity="center"
                  android:paddingTop="10dip" />
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
        <RelativeLayout 
            android:id="@+id/responseLayout"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:visibility="gone"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            >
            <!-- Gionee <gaoj> <2013-06-04> modify for CR00820407 begin -->
            <aurora.widget.AuroraEditText 
                android:id="@+id/responseContentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:minLines="1"
                android:maxLines="5"
                android:maxLength="1000"
                android:layout_alignParentBottom="true"
                android:hint="@string/gn_mms_pop_input"
                />
            <!-- Gionee <gaoj> <2013-06-04> modify for CR00820407 end -->
            <ImageView
                android:id="@+id/responseDownView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/text_counters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:id="@+id/sendLayout">
            <TextView
                android:id="@+id/text_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/gn_color_black"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <aurora.widget.AuroraButton
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gn_mms_pop_send"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/gn_color_gray"
                android:singleLine="true"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sendLayout"
            android:layout_marginLeft="3dip"
            android:orientation="vertical">
            <aurora.widget.AuroraEditText
                android:id="@+id/responseEditText"
                android:minLines="1"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gn_mms_pop_input"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/gn_color_black" />
        </LinearLayout>
    </RelativeLayout>

    <!-- bottom -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingTop="8dip"
        android:paddingBottom="8dip"
        >
        <ImageView
            android:id="@+id/simCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dip"
            />
        <TextView
            android:id="@+id/msgDate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dip"
            android:layout_alignTop="@id/simCard"
            android:layout_alignBottom="@id/simCard"
            android:gravity="center"
          />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_toRightOf="@id/simCard"
            android:layout_toLeftOf="@id/msgDate"
            android:layout_alignTop="@id/simCard"
            android:layout_alignBottom="@id/simCard"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/simCard"
            android:layout_marginTop="9dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            >
            <aurora.widget.AuroraButton
                android:id="@+id/responseBtn"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/gn_mms_pop_response"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                android:layout_marginRight="8dip"
                />
            <aurora.widget.AuroraButton
            android:id="@+id/delBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:visibility="gone"
            />
        <aurora.widget.AuroraButton
            android:id="@+id/readBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gn_mms_pop_read"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:textColor="@color/gn_color_white"
            android:paddingLeft="15dip"
            android:visibility="gone" />
        <aurora.widget.AuroraButton
            android:id="@+id/viewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gn_mms_pop_view"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:textColor="@color/gn_color_white"
            android:paddingLeft="15dip"
            android:visibility="gone" />
            <aurora.widget.AuroraButton
                android:id="@+id/closeBtn"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/gn_mms_pop_delete"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
