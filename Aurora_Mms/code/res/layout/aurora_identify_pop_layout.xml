<?xml version="1.0" encoding="utf-8"?>
<!-- Aurora xuyong 2015-01-30 created for aurora's new feature -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView android:id="@+id/aurora_pop_indi"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginRight="9dip"
        android:background="@drawable/aurora_multi_notification_icon"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"/>
    <!-- Aurora xuyong 2015-03-17 modified for aurora's new feature start -->
    <Button 
        android:id="@+id/aurora_pop_done"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_width="46dip"
        android:layout_height="29dip"
        android:textSize="16sp"
        android:text="@string/aurora_copy"
        android:textColor="@color/aurora_ipop_cp_txt_selector"
        android:background="@drawable/aurora_ipop_cp_selector"/>
        
    <TextView
        android:id="@+id/aurora_pop_content"
        android:layout_toRightOf="@id/aurora_pop_indi"
        android:layout_toLeftOf="@id/aurora_pop_done"
        android:lines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:lineSpacingExtra="1dip"
        android:gravity="left"
        android:textColor="#e0ffffff"
        android:textSize="12sp"/>
    <!-- Aurora xuyong 2015-03-17 modified for aurora's new feature end -->
</RelativeLayout>
