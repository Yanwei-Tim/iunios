<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingTop="@dimen/gn_list_item_top_margin"
    android:paddingBottom="@dimen/gn_list_item_bottom_margin"
    android:paddingLeft="12dip"
    android:paddingRight="@dimen/list_item_right_margin_gn">

    <com.gionee.mms.ui.GnTextView
        android:id="@+id/favorite_body"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/list_item_top_margin"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/favorite_date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left" />
        <TextView
            android:id="@+id/favorite_receipt"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="@dimen/list_item_left_margin_gn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

