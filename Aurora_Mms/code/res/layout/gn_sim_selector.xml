<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dip"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:paddingLeft="0dip"
        android:paddingRight="?android:attr/scrollbarSize" >

        <RelativeLayout
            android:id="@+id/sim_layout"
            android:layout_width="39dip"
            android:layout_height="39dip"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:id="@+id/sim_icon"
                android:layout_width="39dip"
                android:layout_height="39dip"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/sim_status"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_alignLeft="@id/sim_icon"
                android:layout_alignTop="@id/sim_icon"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="2dip"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/sim_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="2dip"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sim3g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dip"
                android:layout_marginTop="1dip"
                android:includeFontPadding="false"
                android:text="@string/gemini_3g_indic"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sim_number_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="2dip"
                android:layout_marginRight="2dip"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="6dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/sim_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>

            <TextView
                android:id="@+id/sim_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sim_name"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall">
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/sim_suggested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff000000" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right" >
    </LinearLayout>

</LinearLayout>