<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.android.mms"
    android:id="@+id/show_media"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/aurora_slide_bg"
    android:padding="6dip"
    android:visibility="gone">

    <com.aurora.mms.ui.AuroraRoundImageView
        android:id="@+id/media_icon"
        android:layout_width="92dip"
        android:layout_height="112dip"
        android:scaleType="centerCrop"
        app:corner_radius="13dip"
        app:border_width="0dip"/>
     <!-- Gionee fangbin 20111126 modified for CR00452639 start -->
     <TextView android:id="@+id/media_name"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_marginLeft="10dip"
         android:gravity="center_vertical"
         android:textAppearance="?android:attr/textAppearanceSmall"
         android:singleLine="true"
         android:visibility="gone" />
     <!-- Gionee fangbin 20111126 modified for CR00452639 end -->
     <ImageView
         android:id="@+id/aurora_slideshow_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:clickable="true"
         android:focusable="true"
         android:focusableInTouchMode="true"
         android:src="@drawable/aurora_va_play_selector" />
     <!-- Aurora xuyong 2014-01-03 modified for aurora's new featurea start -->
     <TextView
        android:id="@+id/aurora_slide_bg_down"
        android:layout_width="92dip"
        android:layout_height="20dip"
        android:gravity="right"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/aurora_attach_bg_down" />
     <!-- Aurora xuyong 2014-01-03 modified for aurora's new featurea end -->
</RelativeLayout>
