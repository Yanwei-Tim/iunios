<?xml version="1.0" encoding="utf-8"?>
<com.android.mms.ui.ConversationListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aurora="http://schemas.android.com/apk/res/com.aurora"
    xmlns:app="http://schemas.android.com/apk/res/com.android.mms"
    android:layout_width="match_parent"
    android:layout_height="@dimen/aurora_conv_personal_list_height"
    android:descendantFocusability="blocksDescendants" >
    <com.aurora.mms.ui.AuroraMmsQuickContactBadge
        android:id="@+id/aurora_avatar"
        android:layout_height="@dimen/aurora_personal_avatar_size_length"
        android:layout_width="@dimen/aurora_personal_avatar_size_length"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/aurora_list_horizontal_padding"
        android:layout_marginRight="@dimen/aurora_list_horizontal_padding"
        android:layout_centerVertical="true"
        app:overlay="@drawable/aurora_mode_small_bg_disabled"
        app:overlay_color="@color/aurora_avatar_overlay_color"
        app:default_src="@drawable/aurora_default_avatar"
        app:circle_color="@color/aurora_avatar_circle_color"
        app:circle_depth="@dimen/aurora_avatar_circle_depth"
        app:side_length="@dimen/aurora_personal_avatar_size_length"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/aurora_avatar"
        android:paddingTop="@dimen/aurora_personal_list_vertical_padding"
        android:paddingBottom="@dimen/aurora_personal_list_vertical_padding"
        android:paddingRight="@dimen/aurora_list_horizontal_padding"
        >
        <aurora.widget.AuroraTextView
            android:id="@+id/aurora_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/aurora_convfrom_text_max_width"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignWithParentIfMissing="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone"
            style="@style/aurora_conv_list_title_text_style"/>
        <aurora.widget.AuroraTextView
            android:id="@+id/aurora_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/aurora_convfrom_text_max_width"
            android:layout_alignBottom="@id/aurora_from"
            android:layout_marginBottom="@dimen/list_conv_purpose_margin_bottom"
            android:layout_toRightOf="@id/aurora_from"
            android:layout_alignWithParentIfMissing="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone"
            style="@style/aurora_conv_list_purpose_text_style"/>
        <aurora.widget.AuroraTextView
            android:id="@+id/aurora_draft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/aurora_from"
            android:layout_toRightOf="@id/aurora_purpose"
            style="@style/aurora_conv_list_title_text_style"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/aurora_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/aurora_from"
            android:layout_toRightOf="@id/aurora_draft"
            android:layout_marginLeft="@dimen/list_item_margin"
            android:layout_marginBottom="@dimen/list_sp_margin_bottom"
            android:background="@drawable/aurora_ic_attachment"
            android:visibility="gone" />
         <!-- Aurora xuyong 2014-10-23 added for privacy feature start -->
         <ImageView
            android:id="@+id/aurora_lock_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/aurora_from"
            android:layout_toRightOf="@id/aurora_attachment"
            android:layout_marginLeft="@dimen/list_item_margin"
            android:layout_marginBottom="@dimen/list_sp_margin_bottom"
            android:background="@drawable/aurora_privacy_lock"
            android:visibility="gone" />
        <!--<aurora.widget.AuroraCheckBox
            android:id="@+id/aurora_check"
            aurora:auroraRoundDrawable="true"
            android:layout_width="@dimen/aurora_checkbox_size"
            android:layout_height="@dimen/aurora_checkbox_size"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/aurora_from"
            android:layout_marginLeft="@dimen/aurora_conv_cb_margin"
            android:visibility="gone"
            android:button="@*com.aurora:drawable/aurora_btn_check_material_anim"
            android:padding="0dp"
            android:layout_marginBottom="@dimen/list_sw_margin_bottom"/>-->
        <aurora.widget.AuroraTextView
            android:id="@+id/aurora_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/aurora_from"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/list_sw_margin_bottom"
            android:singleLine="true"
            style="@style/aurora_conv_list_tag_text_style" />
        <aurora.widget.AuroraTextView
            android:id="@+id/aurora_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@id/aurora_from"
            android:layout_alignLeft="@id/aurora_from"
            android:singleLine="true"
            style="@style/aurora_conv_personal_list_snippet_text_style"/>
    </RelativeLayout>
    <aurora.widget.AuroraTextView
        android:id="@+id/aurora_conv_divider"
        android:layout_below="@id/aurora_avatar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/aurora_conv_divider_bg_color"
        android:layout_width="@dimen/aurora_personal_conv_divider_width"
        android:layout_height="@dimen/aurora_conv_divider_height"/>
</com.android.mms.ui.ConversationListItem>