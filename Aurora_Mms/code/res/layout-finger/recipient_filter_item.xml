<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/aurora_personal_list_vertical_padding"
        android:orientation="horizontal" >
        <LinearLayout 
            android:orientation="vertical"
            android:paddingTop="@dimen/aurora_personal_list_vertical_padding"
            android:paddingBottom="@dimen/aurora_personal_list_vertical_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <aurora.widget.AuroraTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/aurora_conv_list_title_text_style" />
            <LinearLayout 
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <aurora.widget.AuroraTextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    style="@style/aurora_conv_list_snippet_text_style" />
                <aurora.widget.AuroraTextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dip"
                    style="@style/aurora_conv_list_snippet_text_style"
                    android:singleLine="true" />
<!-- Aurora xuyong 2014-04-03 modified for aurora's new feature end -->
    <!-- Aurora xuyong 2013-11-13 modified for aurora's new feature end -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- Aurora xuyong 2014-10-23 added for privacy feature start -->
    <TextView 
        android:id="@+id/aurora_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <!-- Aurora xuyong 2014-10-23 added for privacy feature end -->
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/aurora_divider_lan"/>
    <!-- Aurora xuyong 2013-10-21 modified for bug #31 start -->
