<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/duoqu_ll_load_more"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/duoqu_nearby_point_bg_load_more"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/duoqu_iv_load_more"
        android:layout_width="10dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/duoqu_nearby_point_load_more" />

    <TextView
        android:id="@+id/duoqu_tv_load_more"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="@string/duoqu_tip_load_more"
        android:textColor="@color/duoqu_nearby_point_tip_load_more"
        android:textSize="12dp" />

</LinearLayout>