<?xml version="1.0" encoding="utf-8"?>
<cn.com.xy.sms.sdk.ui.popu.widget.DuoquRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:duoqu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/duoqu_code_bubble_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/duoqu_all_transparent"
    duoqu:duoqu_height="40dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/duoqu_code_head_logo"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/duoqu_code_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/duoqu_white"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:id="@+id/duoqu_code_head_line"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/duoqu_white_transparent_30" />

</cn.com.xy.sms.sdk.ui.popu.widget.DuoquRelativeLayout>