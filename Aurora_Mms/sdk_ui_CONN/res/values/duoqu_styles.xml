<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarSize">50dp</item>
    </style>

    <style name="ShareDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        
    </style>
    
    <style name="myProgressBarStyleLarge" >
		<item name="android:indeterminateDrawable">@drawable/duoqu_progress_large</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:maxWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:maxHeight">48dp</item>
	</style>
	
     <style name="popupNotifyAnimation">
        <item name="@android:windowEnterAnimation">@anim/in</item>
        <item name="@android:windowExitAnimation">@anim/out</item>
    </style>
    
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
                <item name="android:windowBackground">@android:color/transparent</item>
                <item name="android:windowNoTitle">true</item>
     </style>
     
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menu_show</item>
        <item name="android:windowExitAnimation">@anim/menu_hide</item>
    </style>
    
</resources>