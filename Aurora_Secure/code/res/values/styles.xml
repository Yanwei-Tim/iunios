   <style name="button_text">				
	     <item name="android:textColor">@color/btn_text_title_selector_color</item>
	     <item name="android:textSize">18sp</item>     
   </style>
	
   <style name="app_icon_of_listview">	     
	     <item name="android:layout_width">43.3dp</item>
	     <item name="android:layout_height">43.3dp</item>
	     <item name="android:layout_marginLeft">17dp</item>
	     <item name="android:layout_marginTop">10dp</item>
	     <item name="android:layout_marginBottom">10dp</item>
	</style>
	
   <style name="item_of_listview">	     
	     <item name="android:layout_width">fill_parent</item>
	     <item name="android:layout_height">wrap_content</item>
	     <item name="android:minHeight">57dp</item>
   </style>
      <style name="AppLaucherTheme" parent="@com.aurora:style/Theme.aurora.Light">
        <item name="android:windowIsTranslucent">true</item>
