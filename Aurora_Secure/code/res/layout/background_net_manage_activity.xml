<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <FrameLayout 
        android:id="@+id/NoAppLayout"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:background="#f6f6f6" android:visibility="gone">
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="167.3dp" android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="@dimen/hint_big_text_size" android:textColor="@color/hint_text_color"
            android:text="@string/no_app_of_back_flow"/>
    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/HaveAppLayout" android:visibility="gone"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
	       android:id="@+id/textInfoLayout"
	       android:layout_width="fill_parent" android:layout_height="30dp" 
	       android:background="@drawable/title_bg"
	       android:orientation="horizontal">
	       <TextView
	           android:id="@+id/backgroundFlowText"
	           android:layout_width="wrap_content" android:layout_height="fill_parent"
	           android:gravity="center_vertical" android:lines="1" 
	           android:layout_alignParentLeft="true" android:paddingLeft="17dp"
	           android:textColor="#333333" android:textSize="12sp"
	           android:text="@string/background_flow"/>
	       <TextView
	           android:id="@+id/timeDuringText"
	           android:layout_width="wrap_content" android:layout_height="fill_parent" 
	           android:gravity="center" android:lines="1"
	           android:layout_alignParentRight="true" android:paddingRight="17dp"
	           android:textColor="#333333" android:textSize="12sp"
	           android:text="@string/time_during"/>   
	    </RelativeLayout>
	      
	    <com.secure.stickylistheaders.StickyListHeadersListView
			android:id="@+id/appListview"
			android:layout_width="fill_parent"  android:layout_height="fill_parent"			
			android:focusable="false" android:fadingEdge="none"
			android:listSelector="@drawable/item_of_middle"
			android:divider="@drawable/line" android:dividerHeight="1px"/>
    </LinearLayout>
</RelativeLayout>
