<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/item_of_listview"
    android:descendantFocusability= "blocksDescendants" >
    <ImageView
		  android:id="@+id/appIcon"
		  style="@style/app_icon_of_listview"
		  android:layout_centerVertical="true"/> 
		  
    <Button
        android:id="@+id/stopBtn"
        android:layout_width="52dp" android:layout_height="27dp"
        android:layout_alignParentRight="true" android:layout_marginRight="17dp"
        android:layout_centerVertical="true" 
        android:text="@string/stop" 
        android:textColor="@color/btn_text_title_selector_color" android:textSize="16sp"
		android:background="@drawable/button"/>		  	
    
    <LinearLayout
        android:id="@+id/textInfoLayout"
        android:layout_width="fill_parent" android:layout_height="wrap_content" 
        android:layout_centerVertical="true"		       
        android:layout_toRightOf="@id/appIcon" 
        android:layout_toLeftOf="@id/stopBtn"
        android:gravity="left"  android:paddingLeft="12dp"
        android:orientation="vertical">
        <TextView
              android:id="@+id/appName"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:gravity="left" android:lines="1" android:ellipsize="end"
              android:textColor="@color/list_text_title_selector_color"
              android:textSize="15sp"/>
        <TextView
              android:id="@+id/subText"
              android:layout_width="fill_parent" android:layout_height="wrap_content" 
              android:layout_marginTop="7dp"
              android:gravity="left" android:lines="1" 
              android:textColor="@color/list_text_sub_selector_color"
              android:textSize="11.3sp"/>     
    </LinearLayout>
</RelativeLayout>