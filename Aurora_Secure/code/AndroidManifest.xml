<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aurora.secure"
    android:versionCode="1"
    android:versionName="1.655"
    android:sharedUserId="android.uid.system">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <application
        android:icon="@drawable/ic_launcher"
        android:name="com.secure.activity.CustomApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
          
        <activity
            android:name="com.secure.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
			android:windowSoftInputMode="stateHidden|adjustPan"
			android:theme="@com.aurora:style/Theme.aurora.Light"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.secure.activity.PermissionManageActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" />
        
        <receiver android:name="com.secure.receive.PermissionChangeReciver">
            <intent-filter >
                <action android:name="com.lbe.security.action_package_permission_change"/>
                </intent-filter>
        </receiver>
        
        <activity
            android:name="com.secure.activity.PermissionDetailActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.secure.activity.AppDetailActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" android:exported="true">
	        <intent-filter>
                <action android:name="android.settings.APPLICATION_DETAILS_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="package" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.secure.activity.AutoStartManageActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.secure.activity.AddAutoStartAppActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.secure.activity.CacheManageActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" 
			android:exported="true" >
	        <intent-filter>
                <action android:name="android.intent.action.MANAGE_PACKAGE_STORAGE" />
                <action android:name="android.settings.INTERNAL_STORAGE_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
	        
        <activity
            android:name="com.secure.activity.CacheDetailActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.secure.activity.NetManageActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait"
            android:exported="true"  />
        
        <activity
            android:name="com.secure.activity.BackgroundNetManageActivity"
            android:screenOrientation="portrait"
            android:configChanges="screenSize"
            android:theme="@com.aurora:style/Theme.aurora.Light" 
            android:exported="true" />
       
       <activity
            android:name="com.secure.activity.AppPermissionManageActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:launchMode="singleTop"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" />
       
        <activity
            android:name="com.secure.activity.DefSoftManageActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.secure.activity.AdBlockActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" 
            android:launchMode="singleTask"/>
        
        <activity
            android:name="com.secure.activity.AdAppListActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" 
            android:launchMode="singleTask"/>
        
        <activity
            android:name="com.secure.activity.AdDetailActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        
        <activity
            android:name="com.secure.activity.AllAppListActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" 
            android:exported="true" >
	        <intent-filter>
                <action android:name="android.settings.APPLICATION_SETTINGS" />
                <action android:name="android.settings.MANAGE_APPLICATIONS_SETTINGS" />
                <action android:name="android.settings.MANAGE_ALL_APPLICATIONS_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.VOICE_LAUNCH" />
                <category android:name="com.android.settings.SHORTCUT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.secure.activity.SettingActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" 
            android:exported="true"/>
       
        <activity 
            android:name="com.secure.activity.NetForbidHintActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
			android:windowSoftInputMode="stateHidden|adjustPan"
			android:screenOrientation="portrait"
			android:launchMode="singleInstance"
			android:excludeFromRecents="true"
			android:theme="@style/Dialog"/>
        
        <!-- 加如属性的目的：android:excludeFromRecents="true" 不出现在最近任务栏 -->
        <!-- android:theme="@style/FULL_Dialog" -->
        <activity 
            android:name="com.secure.activity.PermissionRemindActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
			android:windowSoftInputMode="stateHidden|adjustPan"
			android:screenOrientation="portrait"
			android:theme="@com.aurora:style/Theme.aurora.Light"
			android:excludeFromRecents="true"
			android:launchMode="singleInstance" />
        
        <activity
            android:label="@string/privacy_app"
            android:icon="@drawable/privacy_app_icon"
            android:name="com.secure.activity.PrivacyAppActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" 
			android:exported="true" />
        
        <activity
            android:name="com.secure.activity.AddPrivacyAppActivity"
            android:theme="@com.aurora:style/Theme.aurora.Light"
            android:configChanges="screenSize"
            android:screenOrientation="portrait" />
  
        <service android:name="com.secure.service.WatchDogService" />
        
        <!--android:exported:是否允许被其它程序调用-->
        <service android:name="com.secure.service.AidlService"
            android:exported="true">
	    	<intent-filter>
	    		<action android:name="com.secure.service.IAidlService" />
	    	</intent-filter>
		</service>
		
        <service android:name="com.secure.service.AdBlockService"
            android:exported="true">
	    	<intent-filter>
	    		<action android:name="com.secure.service.IAdBlockService" />
	    	</intent-filter>
		</service>
        
         <receiver android:name="com.secure.receive.BootReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
		
        <receiver android:name="com.secure.receive.ShutdownReceiver">
			<intent-filter>
				<action android:name="android.intent.action.ACTION_SHUTDOWN" />
			</intent-filter>
		</receiver>
		  <receiver android:name="com.secure.receive.iconUpdateReceiver" >
            <intent-filter>
                <action android:name="com.aurora.action.pulbicres.update" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.secure.receive.HandlePackageAction" 
            android:enabled="true">  
		    <intent-filter>  
		        <action android:name="android.intent.action.PACKAGE_ADDED"></action>  
		        <action android:name="android.intent.action.PACKAGE_CHANGED"></action>
		        <action android:name="android.intent.action.PACKAGE_DATA_CLEARED"></action> 
		        <action android:name="android.intent.action.PACKAGE_FIRST_LAUNCH"></action> 
		        <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED"></action>    
		        <action android:name="android.intent.action.PACKAGE_REMOVED"></action>  
		        <action android:name="android.intent.action.PACKAGE_REPLACED"></action>  
		        <action android:name="android.intent.action.PACKAGE_RESTARTED"></action>   	        
		        <data android:scheme="package"></data>  
		    </intent-filter>  
		</receiver>
		
        <receiver android:name="com.secure.receive.DeviceStorageReceiver">
			<intent-filter>
				<action android:name="android.intent.action.DEVICE_STORAGE_LOW" />
				<action android:name="android.intent.action.DEVICE_STORAGE_OK" />
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<action android:name="com.secure.action.deviceStorageChange" />
			</intent-filter>
		</receiver>
		
        <receiver android:name="com.secure.receive.PermissionRemindReceiver">
            <intent-filter>
			 	<action android:name="com.lbe.security.intent.app_perm_triggered" />  
			</intent-filter>
        </receiver>
        <receiver android:name="com.secure.receive.SDcardPlugExtractReceiver">  
		    <intent-filter>  
		        <action android:name="android.intent.action.MEDIA_MOUNTED"/>  
		        <action android:name="android.intent.action.MEDIA_EJECT" />  
		        <action android:name="android.intent.action.MEDIA_UNMOUNTED" />  
		        <data android:scheme="file"/>  
		    </intent-filter>  
		 </receiver> 
		
        <receiver android:name="com.secure.receive.ExternalAppChangeReceiver">
            <intent-filter>
			 	<action android:name="android.intent.action.EXTERNAL_APPLICATIONS_AVAILABLE" />  
			 	<action android:name="android.intent.action.EXTERNAL_APPLICATIONS_UNAVAILABLE" /> 
			</intent-filter>
        </receiver>
        
        <receiver android:name="com.secure.receive.PrivacyManageReceiver">
            <intent-filter>
			 	<action android:name="com.aurora.privacymanage.DELETE_ACCOUNT" />  
			 	<action android:name="com.aurora.privacymanage.SWITCH_ACCOUNT" /> 
			</intent-filter>
        </receiver>
        
        <provider
	        android:authorities="com.provider.AppInfosProvider"
	        android:name="com.secure.provider.AppInfosProvider" />
            
        <provider
	        android:authorities="com.provider.PermissionProvider"
	        android:name="com.secure.provider.PermissionProvider" />
        
        <provider
	        android:authorities="com.provider.AdLibProvider"
	        android:name="com.secure.provider.AdLibProvider" />
        
        <provider
	        android:authorities="com.provider.AdClassProvider"
	        android:name="com.secure.provider.AdClassProvider" />
        
        <provider
	        android:authorities="com.provider.AdPermProvider"
	        android:name="com.secure.provider.AdPermProvider" />
        
        <provider
	        android:authorities="com.provider.AppAdInfoProvider"
	        android:name="com.secure.provider.AppAdInfoProvider" />
        
        <provider
	        android:authorities="com.provider.UseOperateInfoProvider"
	        android:name="com.secure.provider.UseOperateInfoProvider" />
        
        <provider
	        android:authorities="com.secure.provider.open.AutoStartAppProvider"
	        android:name="com.secure.provider.open.AutoStartAppProvider" />
        
        <provider
	        android:authorities="com.secure.provider.open.PrivacyAppProvider"
	        android:name="com.secure.provider.open.PrivacyAppProvider" />
    </application>
    
    <uses-permission android:name="android.permission.FORCE_STOP_PACKAGES"/>
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>  	
    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE"/>
    <uses-permission android:name="android.permission.CLEAR_APP_USER_DATA" /> 
    <uses-permission android:name="android.permission.DELETE_CACHE_FILES" />
    <uses-permission android:name="android.permission.FORCE_STOP_PACKAGES"/>
    <uses-permission android:name="android.permission.SET_PREFERRED_APPLICATIONS" />
    <uses-permission android:name="android.permission.READ_NETWORK_USAGE_HISTORY" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> 
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>  
</manifest>
