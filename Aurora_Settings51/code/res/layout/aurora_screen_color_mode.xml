<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_temp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/display_color_temperature" />
    
    <ListView
        android:id="@+id/screen_color_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@com.aurora:drawable/aurora_list_selector_light"
        android:background="@android:color/white"
        />

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/screen_color_mode_trips"
        android:visibility="gone"/>
    
</LinearLayout>