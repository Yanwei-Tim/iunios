<?xml version="1.0" encoding="utf-8"?>
<!-- Aurora liugj 2013-10-22 created for aurora's new feature -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:aurora="http://schemas.android.com/apk/res/com.aurora"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@com.aurora:dimen/aurora_subtitle_padding_left"
    android:paddingRight="@com.aurora:dimen/aurora_subtitle_padding_right">
    
    <aurora.widget.AuroraEditText 
        android:id="@+id/name_edittext"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:maxLength="32"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:hint="请输入设备名称"
        android:background="@drawable/aurora_edit_bg"
    />
    </LinearLayout>