<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/accesspoint_layout"
    android:layout_height="60dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@android:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadingEdge="horizontal"
                android:lines="1"
                android:scrollHorizontally="true"
                style="@com.aurora:style/TextAppearance.Aurora.Material.Content" />

            <!--
     Settings        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="159dip"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15sp"
            android:ellipsize="end"
            android:fadingEdge="horizontal" />
            -->
            <!-- android:layout_below="@android:id/title" -->

            <TextView
                android:id="@android:id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:textColor="@color/blue"
                style="@com.aurora:style/TextAppearance.Aurora.Material.Second"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@android:id/widget_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" />
    </LinearLayout>

    <View
        android:id="@+id/aurora_preference_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#16000000" />

</LinearLayout>
