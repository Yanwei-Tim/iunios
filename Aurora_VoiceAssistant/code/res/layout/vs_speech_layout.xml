<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/vs_speech_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true">
		
   
    	<RelativeLayout  
		   android:orientation="horizontal" 
		   android:layout_width="match_parent"	   
		   android:layout_height="27.333333dp"
		   android:layout_gravity="bottom"
		   android:layout_marginLeft="11dp"
		   android:layout_marginRight="11dp"
		   android:layout_marginBottom="10dp">
		   
		   <!-- <Button
		        android:id="@+id/speech_close_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/vs_speech_close_style"
				android:layout_alignParentLeft="true"
				android:layout_alignParentBottom="true"/> -->
		   
		   <LinearLayout
		       android:orientation="horizontal"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true">
		       	<TextView
					android:id="@+id/speech_text1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/vs_speech_des1"
					android:textColor="@color/vs_gray"
					android:textSize="8sp"/>
				<TextView
					android:id="@+id/speech_text2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/vs_speech_des2"
					android:textColor="@color/vs_gray"
					android:textSize="10sp"/>
				<TextView
					android:id="@+id/speech_text3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/vs_speech_des3"
					android:textColor="@color/vs_gray"
					android:textSize="8sp"/>
		   </LinearLayout>
		</RelativeLayout>
		
    	<LinearLayout
    	    	android:id="@+id/speech_anim"
    	    	android:layout_marginBottom="-99.3dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
    		  	<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">
					<FrameLayout
					    android:id="@+id/roundview"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content">
					</FrameLayout>
					<ImageView
						android:id="@+id/speech_img4"
						android:visibility="gone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:background="@drawable/vs_speech_anim_external_circle"
						android:layout_gravity="bottom|center_horizontal"
						android:layout_marginBottom="67.333334dp"/>
				
					 <ImageView
						android:id="@+id/speech_img3"
						android:visibility="gone"
						android:gravity="center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/vs_speech_anim_internal_circle"
						android:layout_gravity="bottom|center_horizontal"
						android:layout_marginBottom="88.333334dp"/>
					  <ImageView
						android:id="@+id/speech_img2"
						android:visibility="gone"
						android:gravity="center"
						android:layout_width="86.666667dp"
            			android:layout_height="86.666667dp"
						android:background="@drawable/vs_speech_anim_loading"
						android:layout_gravity="bottom|center_horizontal"
						android:layout_marginRight="@dimen/vs_translating_mright"
						android:layout_marginBottom="@dimen/vs_translating_mbottom"/>
					  
					  
					  <FrameLayout 
					      android:layout_width="wrap_content"
					      android:layout_height="wrap_content"
					      android:layout_gravity="center_horizontal|bottom"
					      android:layout_marginBottom="@dimen/vs_speech_image_margin_bottom">
						  <ImageView
							android:id="@+id/speech_img_bg"
							android:layout_width="@dimen/vs_voice_recording_button_width"
            				android:layout_height="@dimen/vs_voice_recording_button_height"
							android:gravity="center"
							android:background="@drawable/vs_mic_unpressed"
							android:layout_gravity="bottom|center_horizontal"/>
						  <ImageView
							android:id="@+id/speech_img1"
							android:gravity="center"
							android:layout_width="@dimen/vs_voice_recording_button_width"
            				android:layout_height="@dimen/vs_voice_recording_button_height"
							android:background="@drawable/vs_mic_unpressed"
							android:layout_gravity="bottom|center_horizontal"/>
					  </FrameLayout>
					
		   		</FrameLayout>
		   		
		</LinearLayout>
		
    	<TextView 
    	    android:id="@+id/vs_offline_voice_input_tips"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:gravity="center_horizontal"
    	    android:layout_marginTop="375dp"
    	    android:text="@string/vs_offline_voice_input_tips"
    	    android:textSize="24sp"
    	    android:visibility="gone"/>
</FrameLayout>


      


	
 
 

    
