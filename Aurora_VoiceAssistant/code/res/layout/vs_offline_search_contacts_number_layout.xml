<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <LinearLayout 
	        android:id="@+id/vs_offline_search_contacts_number_number_layout"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/vs_offline_contact_item_height"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@+id/vs_offline_contact_send_message"
	        android:orientation="horizontal"
	        android:background="@drawable/vs_offline_pressed_bg_center_style">
	        <TextView 
		        android:id="@+id/vs_offline_contact_number_type"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="13dp"
		        android:layout_marginRight="16dp"
		        android:layout_gravity="center_vertical"
		        android:textSize="@dimen/vs_offline_contact_item_number_size"
		        android:textColor="@color/vs_half_white"/>
    		<TextView 
		        android:id="@+id/vs_offline_contact_number_number"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:textSize="@dimen/vs_offline_contact_item_number_size"
		        android:textColor="@color/vs_white"/>
	    </LinearLayout>
    	<ImageView 
    	    android:id="@+id/vs_offline_contact_send_message"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:background="@drawable/vs_offline_search_contact_message_style"/>
	    
	</RelativeLayout>
	<ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vs_help_devider"/>

</LinearLayout>
