<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:layout_marginRight="35dp"
        android:background="@drawable/vs_longpress_arrowup_nor"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
	      	android:id="@+id/vs_menu_copy"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	      	android:paddingLeft="19dp"
	      	android:paddingRight="7dp"
	      	android:textColor="#FFFFFFFF"
	      	android:textSize="16sp"
	      	android:gravity="center_vertical"
	      	android:text="@string/vs_copy_text"
	      	android:background="@drawable/vs_longpress_text_left_bg_style"/>
	    <TextView 
	        android:id="@+id/vs_menu_delete"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="7dp"
	        android:paddingRight="7dp"
	        android:textColor="#FFFFFFFF"
	        android:textSize="16sp"
	        android:gravity="center_vertical"
	        android:text="@string/vs_delete_text"
	        android:background="@drawable/vs_longpress_text_center_bg_style"/>
	    <TextView 
	        android:id="@+id/vs_menu_search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="7dp"
	        android:paddingRight="19dp"
	        android:textColor="#FFFFFFFF"
	        android:textSize="16sp"
	        android:gravity="center_vertical"
	        android:text="@string/vs_search_again"
	        android:background="@drawable/vs_longpress_text_right_bg_style"/>
    </LinearLayout>
</FrameLayout>
