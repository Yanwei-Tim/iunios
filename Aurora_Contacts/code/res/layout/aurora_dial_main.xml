<com.android.contacts.widget.AuroraTabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/tabcontent"
        />     
     
    <TabWidget android:layout_width="match_parent"
        android:layout_height="@dimen/aurora_tab_height"
        android:background="#FF272928"
        android:id="@android:id/tabs"
        android:layout_alignParentBottom="true"   
    />    
    </RelativeLayout>
    </com.android.contacts.widget.AuroraTabHost>