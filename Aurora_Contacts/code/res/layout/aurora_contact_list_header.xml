<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <view
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            class="aurora.widget.AuroraSearchView"
            android:iconifiedByDefault="false"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textFilter" />

        <ImageView
            android:id="@+id/gn_audio_search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/gn_audio_search_view"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aurora_group_entrance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aurora_group_entrance_height"
        android:background="@drawable/aurora_entrance_group_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aurora_group_entrance_left_margin"
            android:text="@string/aurora_group_title"
            android:textColor="@color/aurora_title_color"
            android:textSize="@dimen/aurora_group_entrance_title_size" />

        <ImageView
            android:id="@+id/aurora_enter_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/aurora_group_entrance_right_margin"
            android:background="@drawable/aurora_entrance_group_img" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/aurora_list_item_driver_hight"
        android:background="@drawable/h_diver" />

</LinearLayout>