<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@com.aurora:dimen/aurora_list_singleline_height"
        android:background="@android:color/white"
        android:paddingLeft="17dp"
        android:text="@string/up_mark"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:visibility="gone" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/aurora_list_item_driver_hight"
        android:background="@drawable/h_diver"
        android:visibility="gone" />

    <aurora.widget.AuroraListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="false"
        android:fadingEdgeLength="16dip"
        android:fastScrollEnabled="true"
        android:scrollbars="vertical" />

</LinearLayout>