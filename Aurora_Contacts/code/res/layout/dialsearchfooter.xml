<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >

    <!--
         <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="#e8e8e8" />
    -->

    <LinearLayout
        android:id="@+id/footer_add_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/double_list_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >

        <ImageView
            style="@style/dial_search_footer_image_style"
            android:src="@drawable/svg_dial_add_contact" />

        <TextView
            style="@style/dial_search_footer_text_style"
            android:text="@string/menu_addToContact" />
    </LinearLayout>

    <ImageView
        style="@style/horizontal_line_style"
        android:layout_marginLeft="@dimen/double_list_item_photo_width"  />

    <LinearLayout
        android:id="@+id/footer_send_sms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/double_list_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >

        <ImageView
            style="@style/dial_search_footer_image_style"
            android:src="@drawable/svg_dial_message" />

        <TextView
            style="@style/dial_search_footer_text_style"
            android:text="@string/sendsms" />
    </LinearLayout>

<ImageView
        style="@style/horizontal_line_style"
        android:layout_marginLeft="@dimen/double_list_item_photo_width"  />

</LinearLayout>