<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/gn_list_item_min_height"
    android:layout_marginLeft="8dip"
    android:layout_marginRight="8dip"
    android:layout_marginTop="@dimen/gn_dialpad_empty_view_padding_top"
    android:background="?attr/kind_editors_bg"
    android:gravity="center" >

    <aurora.widget.AuroraButton
        android:id="@+id/gn_strange_num_add_new_contact"
        style="@style/GnDrawableTextButton"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="?attr/gn_ic_add_contact"
        android:text="@string/gn_dialpad_new_contact_item" />
    
    <View 
        android:layout_width="@dimen/gn_vertical_divider_width"
        android:layout_height="match_parent"
        android:background="?android:attr/dividerVertical"
        android:layout_gravity="center_vertical" />

    <aurora.widget.AuroraButton
        android:id="@+id/gn_strange_num_add_to_contact"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/GnDrawableTextButton"
        android:drawableTop="?attr/gn_ic_add_existing_contact"
        android:text="@string/gn_dialpad_add_exist_contact_item" />
    
    <!-- <include 
        layout="@layout/gn_add_existing_contact_imagebutton"/> -->
    
    <View
        android:layout_width="@dimen/gn_vertical_divider_width"
        android:layout_height="match_parent"
        android:background="?android:attr/dividerVertical"
        android:layout_gravity="center_vertical" />

    <aurora.widget.AuroraButton
        android:id="@+id/gn_strange_num_send_sms"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/GnDrawableTextButton"
        android:drawableTop="?attr/gn_ic_send_message"
        android:text="@string/gn_dialpad_send_message_item" />
</LinearLayout>