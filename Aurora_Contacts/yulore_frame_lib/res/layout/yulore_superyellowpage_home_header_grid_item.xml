<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/yulore_superyellowpage_iv_category_container_layout"
    android:layout_width="90dp"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/yulore_superyellowpage_home_top_sevice_selector" >

    <com.yulore.superyellowpage.lib.view.RoundedImageView
        android:id="@id/yulore_superyellowpage_iv_category_pic"
        android:layout_width="@dimen/yulore_superyellowpage_home_grid_hot_img_size"
        android:layout_height="@dimen/yulore_superyellowpage_home_grid_hot_img_size"
        android:layout_centerHorizontal="true"
        android:contentDescription="@android:color/transparent"
        android:background="@null"
        android:layout_marginTop="24dp"
        android:padding="0dp"
        android:scaleType="fitXY"
         />

    <TextView
        android:id="@id/yulore_superyellowpage_tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yulore_superyellowpage_iv_category_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textColor="@color/yulore_superyellowpage_home_service_font_gray"
        android:textSize="12sp" />

</RelativeLayout>