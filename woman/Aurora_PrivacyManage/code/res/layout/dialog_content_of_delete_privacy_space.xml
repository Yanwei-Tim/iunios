<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent" android:layout_height="wrap_content"
       android:orientation="vertical">
        <aurora.widget.AuroraCheckBox
		    android:id="@+id/checkBox"
		    android:layout_gravity="center_horizontal"
		    android:layout_width="wrap_content" android:layout_height="wrap_content"
		    android:textColor="@color/black"
		    android:layout_marginBottom="10dp" 
		    android:text="@string/delete_privacy_content_at_same_time"
		    android:checked="false"
            android:textSize="15sp"/>
      	<TextView
		    android:id="@+id/hintText"
		    android:layout_width="wrap_content" android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
	        android:textColor="@drawable/list_text_title_selector_color"
            android:textSize="@com.aurora:dimen/aurora_preference_summary_text_size"
            android:text="@string/undelete_privacy_content_hint"
            android:ellipsize="end" android:fadingEdge="horizontal" 
            android:layout_marginBottom="24dp" />		  
</LinearLayout>
