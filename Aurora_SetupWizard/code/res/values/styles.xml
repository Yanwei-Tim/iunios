<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AuroraApnTheme" parent="com.aurora:style/Theme.aurora.Light">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item> 
    </style>

    <style name="enxigency_call_style" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:background">@drawable/enxigency_call_bg</item>
    </style>

    <style name="next_style" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:background">@drawable/language_next_bg</item>
    </style>

<!--     animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

</resources>