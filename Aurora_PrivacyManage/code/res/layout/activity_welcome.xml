<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="17dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp"
    android:layout_marginStart="17dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_to_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_picture_margin_top"
        android:background="@drawable/to_create"
        android:contentDescription="@string/null_description" />

    <LinearLayout
        android:id="@+id/ll_some_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_to_create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/lock"
            android:text="@string/lock_note"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_shield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/shield"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/shield"
            android:text="@string/shield_note"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_switching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/switching"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/switching"
            android:text="@string/switching_note"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingBottom="15dp"
        android:paddingEnd="0dp"
        android:paddingLeft="3dp"
        android:paddingRight="0dp"
        android:paddingStart="3dp"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <aurora.widget.AuroraTextView
            android:id="@+id/tv_cant_enter_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cant_enter_privacy_space"
            android:textColor="@drawable/textview_fore_color_selector"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:src="@drawable/text_line"/>
    </LinearLayout>

    <aurora.widget.AuroraButton
        android:id="@+id/btn_to_create_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preferences_item_height"
        android:layout_above="@id/tv_ly"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="17dp"
        android:text="@string/create_privacy_account"
        android:textColor="@drawable/btn_text_title_selector_color"
        android:textColorHighlight="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>