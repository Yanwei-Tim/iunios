<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/linearlayout_next_step">
    <TextView 
        android:id="@+id/tv_next_step"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:gravity="end|center_vertical"
        android:text="@string/next_step"
        android:background="@com.aurora:drawable/aurora_action_bar_widget_right_selector"
        android:textColor="@com.aurora:color/aurora_action_bar_button_change_color"
        android:textSize="@com.aurora:dimen/aurora_action_bar_btn_size"/>
    

</LinearLayout>
