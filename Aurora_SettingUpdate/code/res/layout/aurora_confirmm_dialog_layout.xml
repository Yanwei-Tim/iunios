<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logo_layout"
    android:layout_width="313dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:textStyle="bold"
        android:text="@string/notice_mobile_net"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="24dp"
        android:paddingLeft="33dp"
        android:paddingRight="28dp"
        android:text="@string/continue_download_mobile_net"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#e9e9e9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_negative_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="19sp"
            android:background="@com.aurora:drawable/aurora_alert_dialog_btn_selector_left"
            android:text="@string/cancel"
            android:textColor="@com.aurora:color/aurora_button_text_color" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#e9e9e9" />

        <Button
            android:id="@+id/dialog_positive_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="19sp"
            android:background="@com.aurora:drawable/aurora_alert_dialog_btn_selector_right"
            android:text="@string/sure"
            android:textColor="@com.aurora:color/aurora_button_text_color" />
    </LinearLayout>

</LinearLayout>