<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape  android:shape="rectangle">
            <solid android:color="#00FFFFFF"/>
            <size android:width="@dimen/thumbnail_preview_parent_width"
                  android:height="@dimen/thumbnail_preview_parent_height"/>
        </shape>
    </item>
    <item android:left="@dimen/thumbnail_preview_focus_child_left_right" android:right="@dimen/thumbnail_preview_focus_child_left_right" android:top="@dimen/thumbnail_preview_focus_child_top_bottom" android:bottom="@dimen/thumbnail_preview_focus_child_top_bottom">
        <shape android:shape="rectangle">
            <solid android:color="#50FFFFFF"/>
            <!-- <padding android:left="5dp" android:right="5dp" android:top="0dp" android:bottom="0dp"/> -->
            <size android:width="@dimen/thumbnail_preview_focus_child_width"
                  android:height="@dimen/thumbnail_preview_focus_child_height"/>
            <corners android:radius="@dimen/thumbnail_preview_radius"/>
        </shape>
    </item>
    <item android:left="@dimen/thumbnail_preview_focus_child_left_right" android:right="@dimen/thumbnail_preview_focus_child_left_right" android:top="@dimen/thumbnail_preview_focus_child_top_bottom" android:bottom="@dimen/thumbnail_preview_focus_child_top_bottom">
        <shape android:shape="rectangle">
            <stroke android:color="#29FFFFFF" android:width="@dimen/thumbnail_preview_no_focus_child_margin_width"/>
            <!-- <solid android:color="#50FFFFFF"/> -->
            <size android:width="@dimen/thumbnail_preview_focus_child_width"
                  android:height="@dimen/thumbnail_preview_focus_child_height"/>
            <corners android:radius="@dimen/thumbnail_preview_radius"/>
        </shape>
    </item>  
</layer-list>