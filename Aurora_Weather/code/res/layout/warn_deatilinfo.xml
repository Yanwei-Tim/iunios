<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/ll_warn_detail"
    >
     <RelativeLayout
        android:id="@+id/addimageview_container"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#00000000" >

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="#ffffff"
            android:textSize="@com.aurora:dimen/aurora_action_bar_text_size" 
            android:drawableLeft="@drawable/btn_back"
            android:drawablePadding="4dp"
            android:text="@string/warn_detail_title"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:alpha="0"/>

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/btn_share" 
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:alpha="0"/>
    </RelativeLayout>
    
    <ListView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:cacheColorHint="#00000000"
              android:background="#00000000"
              android:listSelector="#00000000"
              android:layout_marginLeft="34dp"
              android:layout_marginRight="34dp"
              android:id="@+id/lv_warndetail"
              android:divider="@drawable/warn_divide"
              android:scrollbars="none"/> 
</LinearLayout>
