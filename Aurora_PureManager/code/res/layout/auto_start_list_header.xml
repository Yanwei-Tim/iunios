<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/big_gray_bg"
    android:orientation="vertical">

    <LinearLayout
            android:id="@+id/textInfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/head_text_height"
            android:orientation="horizontal" >
        
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_left_right_margin"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/auto_start_app_hint"
                android:textColor="@color/head_text"
                android:textSize="@dimen/head_text_size" />

            <ImageView
                android:id="@+id/exclamationImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/padding_large"
                android:src="@drawable/exclamation_icon" />
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_4dp"
        android:background="@color/white" />
</LinearLayout>