<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="@dimen/preferences_item_height"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/preferences_item_height"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:clickable="false" >

        <ImageView
            android:id="@+id/permissionIcon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/permissionSwitch"
            style="@style/aurora_switch"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:drawablePadding="14sp"
            android:drawableRight="@drawable/arrow_down"
            android:textColor="#656565"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/permissionName"
            style="@style/text_of_preferences_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/permissionIcon"
            android:gravity="left"
            android:lines="1"
            android:paddingLeft="15dp" />
    </RelativeLayout>

    <View
        android:id="@+id/bottomSpace"
        android:layout_width="fill_parent"
        android:layout_height="14dp"
        android:visibility="gone" />

</LinearLayout>