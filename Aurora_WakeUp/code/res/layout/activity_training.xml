                <!-- 绿色闪动动画 -->
	           	<ImageView
                    android:id="@+id/recording_ani"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/recording_animation"
                    android:src="@drawable/vs_wake_recording_ani" />	            

	           	<!-- 白色透明（白色过渡动画） -->
	           	<ImageView
