        <!-- 录音 按钮即/提示语-->
        <RelativeLayout
            android:id="@+id/recording_result_infro"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            >
	        
            <!-- 录制失败，再来一次 -->
            <aurora.widget.AuroraButton
				android:id="@+id/fail_to_recording_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="18dp"
	            android:text="@string/fail_to_recording_again"
	            android:textSize="18sp"
	            android:textStyle="normal"
	            android:visibility="invisible" />
            
            <!-- 异常  android:visibility="invisible" -->
            <TextView
                android:id="@+id/training_recording_notice"
                android:layout_above="@id/fail_to_recording_again"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/training_recording_error"
                style="@style/VoiceWakeup.Font.Error"
                android:visibility="invisible" />
            
            <!-- 正在录音，或者 保存 -->
            <aurora.widget.AuroraButton
				android:id="@+id/compound_fail_to_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
