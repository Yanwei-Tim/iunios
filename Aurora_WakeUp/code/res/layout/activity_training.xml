    -->

	<!-- 指导界面 -->
    <RelativeLayout
        android:id="@+id/layout_training_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- android:background="@drawable/bg_training_tip" -->
        <LinearLayout
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 1.... -->
            <LinearLayout 
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
	            <TextView
	                android:layout_marginLeft="29dp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/training_tipn1"
	                android:textColor="#aa000000"
	                android:textSize="16sp" />                
                
	            <TextView
	                android:layout_marginLeft="12dp"
	                android:layout_marginRight="28dp"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/training_tip1"
	                android:lineSpacingExtra="3dp"
	                android:textColor="#000000"
	                android:textSize="16sp" />                
            </LinearLayout>
            

            <!-- 2.... -->
            <LinearLayout 
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
	            <TextView
	                android:layout_marginLeft="29dp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/training_tipn2"
	                android:textColor="#aa000000"
	                android:textSize="16sp" />                
                
	            <TextView
	                android:layout_marginLeft="12dp"
	                android:layout_marginRight="28dp"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/training_tip2"
	                android:lineSpacingExtra="3dp"
	                android:textColor="#000000"
	                android:textSize="16sp" />                
            </LinearLayout>
            
            <!-- key_word -->
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="@string/training_tip2_keywd"
                android:textColor="@color/training_keyword_col"
                android:textSize="16sp" />
            
            <!-- 3.... -->
            <LinearLayout 
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
	            <TextView
	                android:layout_marginLeft="29dp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/training_tipn3"
	                android:textColor="#aa000000"
	                android:textSize="16sp" />                
                
	            <TextView
	                android:layout_marginLeft="12dp"
	                android:layout_marginRight="28dp"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/training_tip3"
	                android:lineSpacingExtra="3dp"
	                android:textColor="#000000"
	                android:textSize="16sp" />                
            </LinearLayout>                 
        </LinearLayout>

        <!-- 训练示意图 -->
        <ImageView
            android:id="@+id/sketch_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tips"
            android:layout_centerInParent="true"
            android:layout_marginTop="69dp"
            android:contentDescription="@string/sketch_img"
            android:src="@drawable/train_sketch_teach" />

       <aurora.widget.AuroraButton
            android:id="@+id/ready_to_recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:text="@string/ready_to_recording"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="invisible" />

    </RelativeLayout>

