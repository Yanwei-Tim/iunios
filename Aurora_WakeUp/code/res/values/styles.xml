    <style name="VoiceWakeup"></style>

    <!--
    ###############################################################
    ### font
    ###############################################################  -->
    <style name="VoiceWakeup.Font" parent="VoiceWakeup">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text.default</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="VoiceWakeup.Font.Error" parent="VoiceWakeup">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text.default</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="VoiceWakeup.Font.Inverse">
        <item name="android:textColor">@color/text.default.inverse</item>
        </style>

    <!--
    ###############################################################
    ### layout
    ###############################################################  -->
    <style name="VoiceWakeup.Layout" parent="VoiceWakeup.Font" />

    <style name="VoiceWakeup.Layout.TopTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    	</style>

    <style name="VoiceWakeup.Layout.TopTitleBar.Content">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#0000</item>
        <item name="android:padding">0px</item>
    	</style>

    <style name="VoiceWakeup.Layout.FooterBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_footerbar</item>
        <item name="android:paddingLeft">10dp</item>
    	</style>

    <style name="VoiceWakeup.Layout.FooterBar.Content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">#0000</item>
    	</style>

    <style name="VoiceWakeup.Layout.Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        </style>

    <style name="VoiceWakeup.Layout.Stroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_main_users</item>
        </style>

    <style name="VoiceWakeup.Layout.SeperatorH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/seperator</item>
        </style>

    <style name="VoiceWakeup.Layout.SeperatorV">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/seperator</item>
    	</style>

    <style name="VoiceWakeup.Layout.SeperatorH.bold">
        <item name="android:layout_height">3dp</item>
    	</style>

    <style name="VoiceWakeup.Layout.SeperatorV.bold">
        <item name="android:layout_width">3dp</item>
		</style>

    <style name="VoiceWakeup.Layout.Settings" />

	<style name="VoiceWakeup.Layout.Settings.Title">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingLeft">20dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:textColor">@color/text.graydeepdeep</item>
		</style>

	<style name="VoiceWakeup.Layout.Settings.Name">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingLeft">40dp</item>
        <item name="android:textColor">@color/text.gray</item>
		</style>

	<style name="VoiceWakeup.Layout.Settings.Name2">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/text.graydeep</item>
        <item name="android:textSize">22sp</item>
		</style>

	<style name="VoiceWakeup.Layout.Settings.Editable">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginLeft">20dp</item>
	    <item name="android:layout_marginRight">20dp</item>
	    <item name="android:paddingLeft">20dp</item>
	    <item name="android:maxLines">1</item>
	    </style>

	<style name="VoiceWakeup.Layout.Settings.description">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingLeft">20dp</item>
	    <item name="android:layout_marginTop">0dp</item>
	    <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textColor">@color/text.gray</item>
	    </style>

	<style name="VoiceWakeup.Layout.Group">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginLeft">20dp</item>
	    <item name="android:layout_marginRight">20dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:layout_marginBottom">10dp</item>
	    <item name="android:background">@drawable/bg_score_result</item>
	    </style>

    <!--
    ###############################################################  -->

    <style name="VoiceWakeup.Layout.Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    	</style>

	<style name="VoiceWakeup.Layout.Section.Title">
	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        </style>

	<style name="VoiceWakeup.Layout.Notice" />

	<style name="VoiceWakeup.Layout.Notice.Title">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingLeft">20dp</item>
	    <item name="android:paddingRight">20dp</item>
		<item name="android:paddingTop">5dp</item>
	    <item name="android:paddingBottom">5dp</item>
		</style>

	<style name="VoiceWakeup.Layout.Notice.Content">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginBottom">10dp</item>
	    <item name="android:paddingLeft">20dp</item>
	    <item name="android:paddingRight">20dp</item>
		</style>

	<style name="VoiceWakeup.Layout.Notice.Content.NoWithTitle">
	    <item name="android:layout_marginTop">10dp</item>
	    <item name="android:layout_marginBottom">10dp</item>
		</style>

	<style name="VoiceWakeup.Layout.Score">
		</style>

	<style name="VoiceWakeup.Layout.Score.Button1">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginLeft">20dp</item>
	    <item name="android:layout_marginRight">20dp</item>
	    <item name="android:layout_marginTop">20dp</item>
	    <item name="android:layout_marginBottom">10dp</item>
	    <item name="android:background">@drawable/bg_score_button</item>
	    <item name="android:textColor">@color/text.white</item>
	    <item name="android:gravity">center</item>
		</style>

	<style name="VoiceWakeup.Layout.Score.Button2" parent="VoiceWakeup.Layout.Score.Button1">
	    <item name="android:layout_marginTop">10dp</item>
	    </style>

	<style name="VoiceWakeup.Layout.Score.Seekbar">
		</style>

</resources>