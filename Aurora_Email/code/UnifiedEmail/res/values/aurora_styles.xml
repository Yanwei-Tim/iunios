<?xml version="1.0" encoding="utf-8"?>

<resources>
	<style name="AuroraPaddingLeft">
	<item name="android:paddingLeft">@dimen/aurora_detail_paddingleft</item>
    </style>


    <style name="AuroraTextStyleDetail">
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="AuroraTextStyleDetailLarge">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="AuroraDetailsValueStyle"  parent="AuroraTextStyleDetailLarge">
        <item name="android:paddingLeft">@dimen/aurora_detail_text_leftpadding</item>
        <item name="android:paddingRight">@dimen/aurora_detail_text_rightpadding</item>
        <item name="android:autoLink">email</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorLink">#000000</item>
        <item name="android:textIsSelectable">true</item>
    </style>
    
    <style name="AuroraTextStyleDetailTitle" parent="AuroraPaddingLeft">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">18sp</item>
        
    </style>

    <style name="AuroraTextStyleDetailButton">
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">11sp</item>
    </style>
    
</resources>
