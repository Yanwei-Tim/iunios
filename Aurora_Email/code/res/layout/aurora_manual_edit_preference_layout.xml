<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <FrameLayout 
        android:layout_width="80dp"
        android:layout_height="fill_parent">
        <TextView 
            android:id="@+id/title"
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:textSize="14sp"
	    	android:textColor="@color/aurora_manual_title_color"
	    	android:maxLines="1"
	    	android:gravity="center_vertical"
	    	android:text="@string/account_delete_dlg_instructions_fmt"
	    	android:paddingLeft="15dp"/>
    </FrameLayout>
    
    <ImageView 
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="@drawable/aurora_manual_eidtprefernce_divider"/>
    <aurora.widget.AuroraEditText 
        android:id="@+id/edittext"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        android:textColor="@color/account_setup_info_text_color"
        />
</LinearLayout>
