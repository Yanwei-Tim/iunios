<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" 
        android:orientation="vertical">
        <TextView
            android:id="@+id/aurora_server_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="0dp"
            android:paddingLeft="15dp"
            android:text="@string/aurora_server_type"
            android:textColor="@color/aurora_manual_title_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/server_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aurora_server_type"
            android:alpha="0.6"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="@string/imap_name"
            android:textColor="@color/aurora_manual_title_color"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/aurora_manual_servertype_icon"
        android:clickable="false"
        android:focusable="false" />

    <!-- android:layout_toLeftOf="@id/image" -->

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.1"
        android:background="@color/conversation_view_border_color2" />

</RelativeLayout>