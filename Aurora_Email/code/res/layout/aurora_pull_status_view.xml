<?xml version="1.0" encoding="utf-8"?>
<com.android.mail.ui.PullStatusView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/aurora_pull_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center">
        
    	<LinearLayout android:id="@+id/content_container"
    	    			android:layout_width="match_parent"
	                    android:layout_height="50dp"
	                    android:orientation="horizontal"
	                    android:layout_centerInParent="true"
	                    android:gravity="bottom">

	    	<LinearLayout android:id="@+id/loading"
	    	    			android:layout_width="match_parent"
	                    	android:layout_height="50dp"
	                    	android:gravity="center"
	                    	android:orientation="horizontal">
	                    	
	    	    <ProgressBar android:id="@+id/loading_view2"
	    	           		android:layout_width="24dp"
		                    android:layout_height="24dp"
		                    android:layout_gravity="center"/>
	                    	
<!-- 		    	<com.android.mail.ui.LoadingView  android:id="@+id/loading_view"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_gravity="center"
		                    
		                    android:src="@drawable/aurora_pull_status_view_loading"/> -->
		    	
		    	<LinearLayout android:layout_width="wrap_content"
		    	    		  android:layout_height="wrap_content"
		    	    		  android:gravity="left|center"
		    	    		  android:orientation="vertical"
		    	    		  android:layout_marginLeft="10dp">
		    	    		<TextView android:id="@+id/loading_text" 
		    	    		    android:layout_width="wrap_content"
		    	    		    android:layout_height="wrap_content"
		    	    		    android:textSize="10sp"
		    	    		    android:textColor="#9e9e9e"
		    	    		    android:text="@string/aurora_list_footer_view_loading_text"/>
		    	    		
		    	    		<TextView android:id="@+id/last_update_time_textview" 
		    	    		    android:layout_width="wrap_content"
		    	    		    android:layout_height="wrap_content"
		    	    		    android:textSize="9sp"
		    	    		    android:textColor="#9e9e9e"/>
		    	    		    
		    	</LinearLayout>
	    	</LinearLayout>
	    	
	    	<LinearLayout android:id="@+id/sending_mail"
	    	    			android:layout_width="match_parent"
	                    	android:layout_height="wrap_content"
	                    	android:gravity="center" >
	    	    <TextView android:layout_width="wrap_content"
	                    	android:layout_height="wrap_content"
	                    	android:text="@string/sending"
	                    	android:gravity="center" />
	    	</LinearLayout>
			
	    	<LinearLayout android:id="@+id/send_failure_tip"
	    	    			android:layout_width="match_parent"
	                    	android:layout_height="wrap_content"
	                    	android:gravity="center">
	             <TextView android:id="@+id/send_failure_tip_textview"
	                 		android:layout_width="wrap_content"
	                    	android:layout_height="wrap_content"
	                    	android:text="@string/aurora_send_failed"/>
	        </LinearLayout>
	        
	    	<LinearLayout android:id="@+id/send_success_tip"
	    	    			android:layout_width="match_parent"
	                    	android:layout_height="wrap_content"
	                    	android:gravity="center">
	             <TextView android:id="@+id/send_success_tip_textview"
	                 		android:layout_width="wrap_content"
	                    	android:layout_height="wrap_content"
	                    	android:text="@string/aurora_send_success"/>
	        </LinearLayout>
        
    	</LinearLayout>
    
</com.android.mail.ui.PullStatusView>
