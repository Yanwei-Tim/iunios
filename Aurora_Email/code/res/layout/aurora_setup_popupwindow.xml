<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/aurora_server_type_imap"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="@string/imap_name"
        android:textColor="@color/aurora_manual_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.1"
        android:background="@color/conversation_view_border_color2" />

    <TextView
        android:id="@+id/aurora_server_type_pop"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="@string/pop3_name"
        android:textColor="@color/aurora_manual_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.1"
        android:background="@color/conversation_view_border_color2" />

</LinearLayout>