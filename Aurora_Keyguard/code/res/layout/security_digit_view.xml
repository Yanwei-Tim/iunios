<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.KeyguardDigitView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aurora="http://schemas.android.com/apk/res/com.android.keyguard"
    android:id="@+id/keyguard_digit_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:contentDescription="@string/keyguard_accessibility_pin_unlock"
    android:gravity="bottom"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/numpad_mask"
        android:gravity="bottom" >

        <com.android.keyguard.KeyguardMessageArea
            android:id="@+id/keyguard_message_area"
            style="@style/Security.Message"
            android:layout_above="@+id/show_digit_entry"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:id="@+id/show_digit_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/num_key"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dip" >

            <TextView
                android:id="@+id/digitEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:background="@null"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="true"
                android:gravity="center"
                android:imeOptions="flagForceAscii|actionDone"
                android:singleLine="true"
                android:textColor="#00000000"
                android:textSize="5sp" />

            <include
                android:id="@+id/show_digit_view"
                layout="@layout/show_digit_view" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/num_key"
            android:layout_width="match_parent"
            android:layout_height="@dimen/num_pad_height"
            android:layout_alignParentBottom="true" >

            <view
                android:id="@+id/key1"
                style="@style/Widget.Button.NumPadKey"
                android:layout_above="@+id/key4"
                android:layout_marginBottom="@dimen/num_pad_key_margin_top"
                android:layout_marginRight="@dimen/num_pad_key_margin_left"
                android:layout_toLeftOf="@+id/key2"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key1"
                aurora:digit="1"
                aurora:textView="@+id/digitEntry" />

            <view
                android:id="@+id/key2"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignTop="@+id/key1"
                android:layout_centerHorizontal="true"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key2"
                aurora:digit="2"
                aurora:textView="@+id/digitEntry" />

            <view
                android:id="@+id/key3"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignTop="@+id/key1"
                android:layout_marginLeft="@dimen/num_pad_key_margin_left"
                android:layout_toRightOf="@+id/key2"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key3"
                aurora:digit="3"
                aurora:textView="@+id/digitEntry" />

            <view
                android:id="@+id/key4"
                style="@style/Widget.Button.NumPadKey"
                android:layout_above="@+id/key7"
                android:layout_alignLeft="@+id/key1"
                android:layout_marginBottom="@dimen/num_pad_key_margin_top"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key4"
                aurora:digit="4"
                aurora:textView="@+id/digitEntry" />

            <view
                android:id="@+id/key5"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignTop="@+id/key4"
                android:layout_centerHorizontal="true"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key5"
                aurora:digit="5"
                aurora:textView="@+id/digitEntry" />

            <view
                android:id="@+id/key6"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignLeft="@+id/key3"
                android:layout_alignTop="@+id/key4"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key6"
                aurora:digit="6"
                aurora:textView="@+id/digitEntry" />

            <view
                android:id="@+id/key7"
                style="@style/Widget.Button.NumPadKey"
                android:layout_above="@+id/emergency_call_button"
                android:layout_alignLeft="@+id/key1"
                android:layout_marginBottom="6dip"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key7"
                aurora:digit="7"
                aurora:textView="@+id/digitEntry" />

            <view
                android:id="@+id/key8"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignTop="@+id/key7"
                android:layout_centerHorizontal="true"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key8"
                aurora:digit="8"
                aurora:textView="@+id/digitEntry" />

            <view
                android:id="@+id/key9"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignLeft="@+id/key3"
                android:layout_alignTop="@+id/key7"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key9"
                aurora:digit="9"
                aurora:textView="@+id/digitEntry" />
            <!--
                <Space
               android:layout_width="0px"
               android:layout_height="match_parent"
               android:layout_weight="1"
               />
            -->

            <com.android.keyguard.EmergencyButton
                android:id="@+id/emergency_call_button"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignLeft="@+id/key1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/security_numpad_margin_bottom"
                android:gravity="center"
                android:src="@drawable/lockscreen_emergency_button" />

            <view
                android:id="@+id/key0"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignTop="@+id/emergency_call_button"
                android:layout_centerHorizontal="true"
                class="com.android.keyguard.NumPadKey"
                android:src="@drawable/numpad_key0"
                aurora:digit="0"
                aurora:textView="@+id/digitEntry" />
            <!--
                <ImageButton
               android:id="@+id/key_enter"
               style="@style/Widget.Button.NumPadKey"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:paddingRight="30dp"
               android:src="@drawable/sym_keyboard_return_holo"
               android:contentDescription="@string/keyboardview_keycode_enter"
               android:visibility="gone"
               />
            -->
            <!--
                <ImageButton android:id="@+id/delete_button"
               android:src="@drawable/ic_input_delete"
               style="@style/Widget.Button.NumPadKey"
               android:layout_toRightOf="@+id/key0"
               android:layout_below="@+id/key9"
               android:clickable="true"
               android:contentDescription="@string/keyboardview_keycode_delete"
               />
            -->

            <com.android.keyguard.view.AuroraAnimationImageView
                android:id="@+id/delete_button"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignLeft="@+id/key3"
                android:layout_alignTop="@+id/emergency_call_button"
                android:clickable="true"
                android:contentDescription="@string/keyboardview_keycode_delete"
                android:src="@drawable/lockscreen_del_button" />
        </RelativeLayout>

        <include
            android:id="@+id/keyguard_selector_fade_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            layout="@layout/keyguard_emergency_carrier_area"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" />
    </RelativeLayout>

</com.android.keyguard.KeyguardDigitView>