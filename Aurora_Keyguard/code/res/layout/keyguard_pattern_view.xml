<!-- This is the screen that shows the 9 circle unlock widget and instructs
     the user how to unlock their device, or make an emergency call.  This
     is the portrait layout.  -->
<com.android.keyguard.KeyguardPatternView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/res/com.android.keyguard"
    android:id="@+id/keyguard_pattern_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    androidprv:layout_maxWidth="@dimen/keyguard_security_width"
    androidprv:layout_maxHeight="@dimen/keyguard_security_height"
    android:gravity="center_horizontal"
    android:contentDescription="@string/keyguard_accessibility_pattern_unlock">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/numpad_mask"
        >

        <com.android.keyguard.KeyguardMessageArea
            android:id="@+id/keyguard_message_area"
            style="@style/Security.Message"
            android:layout_above="@+id/keyguard_bouncer_frame"
            android:layout_marginBottom="13dip"
            android:layout_centerHorizontal="true" />

          <FrameLayout
             android:id="@+id/keyguard_bouncer_frame"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="-14dip"
             android:layout_above="@+id/emergency_call_button"
             >
            <com.android.keyguard.view.AuroraLockPatternView
                android:id="@+id/lockPatternView"
                android:layout_width="324dip"
                android:layout_height="324dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/keyguard_accessibility_pattern_area" />
          </FrameLayout>
          <com.android.keyguard.EmergencyButton
                android:id="@+id/emergency_call_button"
                style="@style/Widget.Button.NumPadKey"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/security_numpad_margin_bottom"
                android:gravity="center"
                android:src="@drawable/lockscreen_emergency_button" />
    </RelativeLayout>

</com.android.keyguard.KeyguardPatternView>
