<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guide_bg_color" >

    <ImageView
        android:id="@+id/iv_splash_mainview"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        android:src="@drawable/splash_icon" />

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="@string/splash_copyright"
        android:textColor="@color/splash_text_copy"
        android:textSize="@dimen/textsize_10" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="108dp"
        android:layout_height="1dp"
        android:layout_above="@id/tv_copyright"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@color/splash_divider" />

    <ImageView
        android:id="@+id/iv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/v_divider"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:src="@drawable/splash_text" />

</RelativeLayout>