<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_main_bg" >

    <se.emilsjolander.stickylistheaders.pulltorefresh.PullToRefreshListView
        android:id="@+id/lv_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:listSelector="@color/transparent" />

    <LinearLayout
        android:id="@+id/ll_no_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/mine_no_news_layout_padding_top"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_no_news"
            android:textColor="@color/mine_no_news_text_color"
            android:textSize="@dimen/mine_no_news_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mine_no_news_icon_margin_top"
            android:src="@drawable/icon_no_news" />
    </LinearLayout>

  <LinearLayout
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/common_main_bg" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_loading_text_margin_top"
            android:textColor="@color/page_loading_text_color"
          android:text="@string/page_loading_network_error"
            android:textSize="@dimen/textsize_20" />

        <ImageView
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_loading_distance"
            android:src="@drawable/page_loading_btn_refresh"
            android:gravity="center" />
    </LinearLayout>

</FrameLayout>