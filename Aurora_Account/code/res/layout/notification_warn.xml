<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/notification_paddingleft"
   >
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
   >
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:src="@drawable/notificaticon_icon" />
   </LinearLayout>
  <LinearLayout
        android:layout_width="@dimen/padding_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/notification_marginleft"
		 
       android:layout_marginTop="@dimen/notification_installed_top"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="@dimen/notification_installed_top"
            android:text="@string/notification_title"
            android:textColor="@color/white"
            android:textSize="@dimen/notification_text_title" />


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/notification_installed_top1"
            android:singleLine="true"
            android:text="@string/notification_info"
            android:textColor="@color/notification_text"
            android:textSize="@dimen/notification_text_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="@dimen/notification_marginright"
        android:layout_gravity="center_vertical"

        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center_vertical|right"

            android:textColor="@color/notification_text"
            android:textSize="@dimen/notification_text_title" />

    </LinearLayout>
</LinearLayout>
</RelativeLayout>