     <!-- 文本字体 -->
    <style name="TextContent">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
    </style>
    <!-- 文本样式蓝色 -->
    <style name="TextContentB">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
    </style>
    <!-- 文本样式白色 -->
    <style name="TextTitleW">
        <item name="android:textSize">@dimen/textsize_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
    </style>
    <!-- 粗休文体字体 -->
    <style name="TextContentBold">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
    </style>

    <!-- 粗休文体白色 -->
    <style name="TextContentBoldW">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
    </style>
</resources>