<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 上传ProgressDialog的样式 -->
    <style name="upload_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="upload_progressDialog" parent="@style/upload_Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Account"></style>
    
    <!-- TextView -->
    <!-- <style name="Account.TextView" parent="@android:style/Widget.TextView"> -->
    <style name="Account.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="Account.TextView.Minor">
        <item name="android:textSize">@dimen/textsize_10</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    
    <style name="Account.TextView.Error">
        <item name="android:textSize">@dimen/textsize_10</item>
        <item name="android:textColor">@color/textview_error_color</item>
        <item name="android:layout_marginTop">@dimen/padding_6</item>
    </style>
    
    <style name="Account.TextView.Login">
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:paddingRight">@dimen/padding_15</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/login_account_height</item>
        <!--
        <item name="android:background">@null</item>
        -->
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Account.TextView.LoginRegister">
        <item name="android:textColor">#c6c6c6</item>
    </style>
    
    <style name="Account.TextView.Header">
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/account_info_textview_header_height</item>
        <!--
        <item name="android:background">@null</item>
        -->
        <item name="android:textColor">#6e6f70</item>
    </style>
    
    <style name="Account.TextView.AccountInfoItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <!--
        <item name="android:background">@null</item>
        -->
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Account.TextView.AccountInfoItemContent">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <!--
        <item name="android:background">@null</item>
        -->
        <item name="android:textColor">#5d5d5d</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    
    <style name="Account.TextView.RegisterNormalLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_10</item>
        <item name="android:paddingEnd">@dimen/padding_10</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">@dimen/textsize_14</item>
    </style>
    
    <style name="Account.LinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="Account.LinearLayout.AccountInfoContainer">
        <item name="android:layout_height">@dimen/account_info_item_height</item>
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:paddingRight">@dimen/padding_15</item>
        <item name="android:background">@drawable/account_info_item_selector</item>
    </style>
    <style name="Account.LinearLayout.AccountSyncContainer">
        <item name="android:paddingLeft">@dimen/account_sync_linelayout_left</item>
        <item name="android:paddingRight">@dimen/padding_20</item>
    </style>
    <style name="Account.Line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/account_info_line</item>
    </style>
    
    <style name="Account.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_focus_selector</item>
        <item name="android:textColor">@color/button_text_color_normal</item>
    </style>
    
    <style name="Account.Button.Logout">
        <item name="android:background">@drawable/button_logout_selector</item>
        <item name="android:textColor">@color/button_logout_text_color_normal</item>
    </style>
    
    <style name="Account.Button.Next">
        <item name="android:text">@string/register_next</item>
    </style>
    
    <style name="Account.VerifyCodeView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_account_height</item>
        <item name="android:layout_marginStart">@dimen/padding_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">@dimen/login_vc_code_height</item>
        <item name="android:minWidth">@dimen/login_vc_code_width</item>
    </style>
    
    <style name="Detail_Arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/padding_12</item>
        <item name="android:src">@drawable/list_arrow_right</item>
    </style>
    
    <style name="Detail_Arrow.Invisible">
        <item name="android:visibility">invisible</item>
    </style>
    
    <style name="Account_Layout_Item">
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:paddingRight">@dimen/padding_15</item>
        <item name="android:minHeight">@dimen/register_layout_item_min_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="Account_Layout_Item_TextView">
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Account_TextView_Tips">
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>
    
    <style name="Account_ClearableEditText">
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
    </style>


 
    

    <style name="AppActionTheme" parent="com.aurora:style/Theme.aurora.Light">
        <item name="com.aurora:auroraActionBarTitleColor">@android:color/white</item>
        <item name="com.aurora:homeIcon">@com.aurora:drawable/aurora_action_bar_back_dark</item>
    </style>

    <style name="AppSearchTheme" parent="com.aurora:style/Theme.aurora.Light">
        <item name="com.aurora:auroraActionBarTitleColor">@android:color/white</item>
        <item name="com.aurora:homeIcon">@com.aurora:drawable/aurora_action_bar_back_dark</item>
        <item name="com.aurora:actionBarRightWidgetBackground">@android:color/transparent</item>
    </style>

    <style name="picture" parent="@android:style/Theme.Light">
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:windowAnimationStyle">@style/anim.alpha</item>
    </style>

    <style name="anim.alpha" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>
    

    
    <style name="AccountTheme" parent="com.aurora:style/Theme.aurora.Light">
        <item name="com.aurora:auroraActionBarTitleColor">@color/white</item>
        <!-- <item name="com.aurora:homeIcon">@drawable/aurora_actionbar_back_arrow_selector</item> -->
          <item name="com.aurora:auroraActionBarItemBackground">@color/white</item>
        <item name="com.aurora:actionBarLeftWidgetBackground">@drawable/aurora_actionbar_back_selector</item>
        <item name="com.aurora:actionBarRightWidgetBackground">@drawable/aurora_actionbar_right_selector</item>
        <!--
        <item name="android:textCursorDrawable">@drawable/search_text_cursor</item>
        -->
    </style>
    
    <style name="AppLaucherTheme" parent="AccountTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
  
