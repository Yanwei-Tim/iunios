<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aurora="http://schemas.android.com/apk/res/com.aurora"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="47dp"    
    android:gravity="center_vertical"    
    android:orientation="horizontal"  
    android:background="@com.aurora:drawable/aurora_list_selector_light">
    
   
        <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="@com.aurora:dimen/aurora_list_doubleline_height"    
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"   
       >
		<!-- android:textAppearance="?android:attr/textAppearanceMedium"  -->
	       <TextView
	           android:id="@+id/other_ring_title"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginStart="17dip"
		       android:layout_marginEnd="6dp"
		       android:layout_marginTop="6dp"
		       android:layout_marginBottom="5dip"
		       android:text="@string/other_ringtone_title"
	           android:textColor="@color/list_item_text_color" 
	           android:singleLine="true"  
	           android:textSize="@com.aurora:dimen/aurora_preference_title_text_size"
	        
	           android:textAppearance="?android:attr/textAppearanceListItemSmall"         
	           />
	
	       <TextView
	            android:id="@+id/song_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	            		        
		        android:layout_marginBottom="6dip"
	            android:layout_below="@id/other_ring_title"
	            android:layout_alignStart="@id/other_ring_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/list_item_text_summary_color" 
	            android:textSize="@com.aurora:dimen/aurora_preference_summary_text_size"
	            android:layout_marginEnd="30dip"           
	            android:singleLine="true" 
	            android:ellipsize="end"           
	            />
	
	    </RelativeLayout>
        
    
     

    <RadioButton
        
        android:id="@+id/rb_other_ringtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dip"
        android:layout_marginEnd="15dip"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:clickable="false"
        
      />

</LinearLayout>