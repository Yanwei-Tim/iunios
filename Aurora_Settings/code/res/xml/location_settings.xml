<aurora.preference.AuroraPreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:aurora="http://schemas.android.com/apk/res/com.aurora"
        aurora:auroratitle="@string/location_settings_title">

        <com.android.settings.WrappingSwitchPreference
            aurora:aurorakey="location_toggle"
            aurora:auroratitle="@string/location_access_title"
            aurora:aurorasummary="@string/location_access_summary"
            aurora:aurorapersistent="true"/>

        <aurora.preference.AuroraPreferenceCategory
            aurora:aurorakey="location_sources"
            aurora:auroratitle="@string/location_sources_heading" />

        <aurora.preference.AuroraSwitchPreference
            aurora:aurorakey="location_gps"
            aurora:auroratitle="@string/location_gps"
            aurora:aurorasummary="@string/location_street_level"
            aurora:auroradependency="location_toggle"
            aurora:aurorapersistent="false" />

        <com.android.settings.WrappingCheckBoxPreference
            aurora:aurorakey="location_network"
            aurora:auroratitle="@string/location_network_based"
            aurora:aurorasummary="@string/location_neighborhood_level"
            aurora:auroradependency="location_toggle"
            aurora:aurorapersistent="false" />

<!-- Disabled to avoid confusion on devices with no AGPS
     For Google experience devices we want AGPS on by default (if supported) so we don't really need this.
        <aurora.preference.AuroraCheckBoxPreference
            aurora:aurorakey="assisted_gps"
            aurora:auroratitle="@string/assisted_gps"
            aurora:aurorasummaryOn="@string/assisted_gps_enabled"
            aurora:aurorasummaryOff="@string/assisted_gps_disabled"/>
-->

</aurora.preference.AuroraPreferenceScreen>
