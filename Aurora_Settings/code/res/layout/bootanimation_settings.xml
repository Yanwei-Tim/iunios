<FrameLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aurora="http://schemas.android.com/apk/res/com.aurora"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
	>
	<FrameLayout 
		android:layout_width="match_parent"    
		android:layout_height="match_parent"
	   	android:layout_gravity="top"
		android:orientation="vertical"
		android:id="@+id/none_settings"
		android:visibility="gone">
<!-- 		android:background="@drawable/bootanimation_default_bg" -->
	    
<!-- 		<TextView -->
<!-- 		    android:text="@string/sign_bootanimation" -->
<!-- 			android:layout_width="140dp" -->
<!-- 		 	android:layout_height="30dp" -->
<!-- 			android:layout_marginTop="205dp" -->
<!-- 			android:textSize="15sp" -->
<!-- 			android:gravity="center" -->
<!-- 			android:layout_marginLeft="110dp" -->
<!-- 		    android:background="@null" /> -->
		<View
        	android:layout_width="match_parent"
    		android:layout_height="105dp"
    		android:background="#a0ffffff"
    		android:layout_gravity="bottom"
        	/>
		<LinearLayout  
			android:layout_marginBottom="23dp"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:orientation="horizontal"
			android:layout_gravity="bottom">
			<Button 
				android:id="@+id/none_change"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_marginLeft="150dp"
				android:background="@drawable/bootanimation_setting"
				android:text="@string/set_bootanimation"
				android:textSize="13sp"
				android:textColor="#000000"
				android:gravity="center"
				android:singleLine="true"
				/> 
		</LinearLayout>
	</FrameLayout>
	<FrameLayout 
		android:layout_width="match_parent"    
		android:layout_height="match_parent"
	   	android:layout_gravity="top"
		android:orientation="vertical"
		android:id="@+id/settings"
		android:visibility="gone">
		<!-- Modify begin by aurora.jiangmx -->
		<!-- delete [ android:layout_marginBottom="329dp" ]
		     modify from [android:layout_gravity="bottom"] 
		            to [android:layout_gravity="center"]-->
		<LinearLayout  
			
			android:layout_width="match_parent"
			android:layout_height="30dp"
			android:orientation="horizontal"
			android:layout_gravity="center"
			android:focusable="true"  
			android:focusableInTouchMode="true">
	        <!-- Modify end -->
			<ImageView
				android:id="@+id/iuni_bg_edit"
				android:visibility="visible"
        		android:layout_width="20dp"
    			android:layout_height="20dp"
        		android:src="@drawable/iuni_bg_edit"
        		android:layout_marginLeft="90dp" />
			<aurora.widget.AuroraEditText
				android:id="@+id/iuni_edit"
				android:text="@string/sign_bootanimation"
				android:layout_width="140dp"
			 	android:layout_height="30dp"
				android:textSize="13sp"
				android:textColor="#FFFFFF"
				android:typeface="sans"
				android:gravity="center"
				android:background="@null"
				android:hint="I AM UNIQUE"
				android:singleLine="true"
				android:inputType="textNoSuggestions" />
			<ImageView
				android:id="@+id/save_edit"
				android:visibility="gone"
        		android:layout_width="20dp"
    			android:layout_height="20dp"
        		android:src="@drawable/save_image"
        		android:layout_marginLeft="10dp" />
		</LinearLayout>
		<View
        		android:layout_width="match_parent"
    			android:layout_height="105dp"
    			android:background="#a0ffffff"
    			android:layout_gravity="bottom"
        		/>
		<LinearLayout  
			android:layout_marginBottom="23dp"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:orientation="horizontal"
			android:layout_gravity="bottom">
			<Button 
				android:id="@+id/change"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_marginLeft="85dp"
				android:background="@drawable/bootanimation_setting"
				android:text="@string/change_bootanimation"
				android:textSize="13sp"
				android:textColor="#000000"
				android:gravity="center"
				android:singleLine="true"
				/>  
			<Button 
				android:id="@+id/reset"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_marginLeft="70dp"
				android:background="@drawable/bootanimation_setting"
				android:text="@string/reset_bootanimation"
				android:textSize="13sp"
				android:textColor="#000000"
				android:gravity="center"
				android:singleLine="true"
				/> 
	</LinearLayout>
	</FrameLayout>
</FrameLayout>

