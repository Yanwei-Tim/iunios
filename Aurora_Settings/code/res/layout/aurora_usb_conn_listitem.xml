<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aurora="http://schemas.android.com/apk/res/com.aurora"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="47dp"    
    android:gravity="center_vertical"    
    android:orientation="horizontal"  
    android:background="@drawable/list_item_back"
    >
    
   
        <RelativeLayout
        android:id="@+id/usb_settings_layout"
        android:layout_width="wrap_content"
        android:layout_height="71dp"        
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"   
       >
		<!-- android:textAppearance="?android:attr/textAppearanceMedium"  -->
	       <TextView
	           android:id="@+id/tv_usb_item_title"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginStart="17dip"
		       android:layout_marginEnd="6dp"
		       android:layout_marginTop="6dp"
		       android:layout_marginBottom="5dip"		       
	           android:textColor="@android:color/black" 
	           android:singleLine="true"  
	           android:textSize="18sp"
	        
	           android:textAppearance="?android:attr/textAppearanceListItemSmall"         
	           />
	
	       <TextView
	            android:id="@+id/tv_usb_item_summary"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	            		        
		        android:layout_marginBottom="6dip"
	            android:layout_below="@id/tv_usb_item_title"
	            android:layout_alignStart="@id/tv_usb_item_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/list_item_text_summary" 
	            android:textSize="15sp"	
	            android:layout_marginEnd="30dip"           
	            android:singleLine="true" 
	            android:ellipsize="end"           
	            />
	
	    </RelativeLayout>
        
    
     

    <RadioButton
        
        android:id="@+id/rb_usb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dip"
        android:layout_marginEnd="15dip"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:clickable="false"
        
      />

</LinearLayout>