<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="com.aurora:style/Theme.aurora.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         <item name="android:windowEnableSplitTouch">false</item>
         <item name="android:textCursorDrawable">@drawable/aurora_text_cursor_light</item>
    </style>
    
    <style name="StyleTextShadow">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#30000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">40.0</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="AlarmAlertFullScreenTheme" parent="@com.aurora:style/Theme.Aurora.Dialog.Alert.FullScreen">
        <item name="android:windowIsFloating">false</item>
        <!-- Gionee <baorui><2013-03-21> modify for CR00785621 begin -->
        <item name="android:windowShowWallpaper">true</item>
        <!-- Gionee <baorui><2013-06-03> modify for CR00820829 begin -->
        <!-- <item name="android:windowBackground">@color/black</item> -->
        <item name="android:windowBackground">@android:color/black</item>
        <!-- Gionee <baorui><2013-06-03> modify for CR00820829 end -->
        <!-- Gionee <baorui><2013-03-21> modify for CR00785621 end -->
    </style>
    
    <style name="RepeatPopupWindowMenu">
      <item name="android:windowEnterAnimation">@anim/popmenu_enter</item>
      <item name="android:windowExitAnimation">@anim/popmenu_exit</item>
    </style>

</resources>
